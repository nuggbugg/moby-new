{%- liquid
  assign heading = section.settings.heading
  assign description = section.settings.description
-%}

<section class="launch-usps">
  <div class="launch-usps__container">
    {%- if heading != blank -%}
      <h2 class="launch-usps__heading">{{ heading }}</h2>
    {%- endif -%}

    {%- if description != blank -%}
      <p class="launch-usps__description">{{ description }}</p>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="launch-usps__grid">
        {%- for block in section.blocks -%}
          <div class="launch-usps__card" {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              <div class="launch-usps__card-image">
                <img
                  src="{{ block.settings.image | image_url: width: 400 }}"
                  alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                  loading="lazy"
                  width="400"
                  height="{{ 400 | divided_by: block.settings.image.aspect_ratio | round }}"
                >
              </div>
            {%- elsif block.settings.icon != blank -%}
              <div class="launch-usps__card-icon">
                {{ block.settings.icon }}
              </div>
            {%- else -%}
              <div class="launch-usps__card-icon launch-usps__card-icon--default">
                {%- case forloop.index -%}
                  {%- when 1 -%}
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                    </svg>
                  {%- when 2 -%}
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                  {%- when 3 -%}
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <circle cx="12" cy="12" r="10"></circle>
                      <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                  {%- else -%}
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                {%- endcase -%}
              </div>
            {%- endif -%}

            {%- if block.settings.title != blank -%}
              <h3 class="launch-usps__card-title">{{ block.settings.title }}</h3>
            {%- endif -%}

            {%- if block.settings.text != blank -%}
              <p class="launch-usps__card-text">{{ block.settings.text }}</p>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

{% stylesheet %}
  .launch-usps {
    background: #fff;
    padding: 80px 24px;
  }

  .launch-usps__container {
    max-width: 960px;
    margin: 0 auto;
    text-align: center;
  }

  .launch-usps__heading {
    font-family: 'Memoir', serif;
    font-size: clamp(28px, 4vw, 36px);
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--moby-dark, #1B1A0F);
    margin: 0 0 12px;
  }

  .launch-usps__description {
    font-family: 'N27', sans-serif;
    font-size: 16px;
    font-weight: 300;
    line-height: 1.6;
    color: var(--moby-olive, #4F4A32);
    margin: 0 0 48px;
    max-width: 540px;
    margin-left: auto;
    margin-right: auto;
  }

  .launch-usps__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .launch-usps__card {
    text-align: center;
    padding: 32px 20px;
    background: var(--moby-dark, #1B1A0F);
    border-radius: 6px;
  }

  .launch-usps__card-image {
    width: 100%;
    margin-bottom: 20px;
    border-radius: 4px;
    overflow: hidden;
  }

  .launch-usps__card-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .launch-usps__card-icon {
    width: 56px;
    height: 56px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--moby-lime, #F9FDB5);
    border-radius: 50%;
    color: var(--moby-olive, #4F4A32);
  }

  .launch-usps__card-title {
    font-family: 'N27', sans-serif;
    font-size: 16px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #fff;
    margin: 0 0 8px;
  }

  .launch-usps__card-text {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 300;
    line-height: 1.6;
    color: var(--moby-sage, #C9C8B6);
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .launch-usps {
      padding: 60px 20px;
    }

    .launch-usps__grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .launch-usps__card {
      padding: 24px 20px;
    }
  }
{% endstylesheet %}

