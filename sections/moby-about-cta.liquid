{% comment %}
  MOBY About CTA Section
  - Full-width background image with overlay
  - Centered text and CTA button
  - "Balance, Strength & Clarity" call to action
{% endcomment %}

<section class="moby-about-cta">
  {%- if section.settings.background_image != blank -%}
    <div class="moby-about-cta__image-wrapper">
      {{ section.settings.background_image | image_url: width: 2560 | image_tag:
        class: 'moby-about-cta__image',
        loading: 'lazy',
        sizes: '100vw',
        widths: '375, 750, 1100, 1500, 1920, 2560',
        alt: section.settings.heading | default: 'MOBY Call to Action'
      }}
    </div>
  {%- else -%}
    <div class="moby-about-cta__placeholder"></div>
  {%- endif -%}

  <div class="moby-about-cta__overlay"></div>

  <div class="moby-about-cta__content">
    {%- if section.settings.tagline != blank -%}
      <p class="moby-about-cta__tagline">{{ section.settings.tagline }}</p>
    {%- endif -%}

    <h2 class="moby-about-cta__heading">{{ section.settings.heading }}</h2>

    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="moby-about-cta__button">
        {{ section.settings.button_label }}
      </a>
    {%- endif -%}
  </div>
</section>

<style>
  .moby-about-cta {
    position: relative;
    padding: 80px 16px;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .moby-about-cta {
      padding: 128px 32px;
    }
  }

  .moby-about-cta__image-wrapper,
  .moby-about-cta__placeholder {
    position: absolute;
    inset: 0;
  }

  .moby-about-cta__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .moby-about-cta__placeholder {
    background: var(--moby-olive, #4F4A32);
  }

  .moby-about-cta__overlay {
    position: absolute;
    inset: 0;
    background: rgba(28, 26, 16, 0.7);
    pointer-events: none;
  }

  .moby-about-cta__content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .moby-about-cta__tagline {
    font-family: 'N27', sans-serif;
    font-size: 16px;
    font-weight: 300;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 16px;
  }

  @media (min-width: 768px) {
    .moby-about-cta__tagline {
      font-size: 18px;
    }
  }

  .moby-about-cta__heading {
    font-family: 'Memoir', serif;
    font-size: 36px;
    font-weight: 400;
    line-height: 1.1;
    text-transform: uppercase;
    color: #ffffff;
    margin: 0 0 32px;
  }

  @media (min-width: 768px) {
    .moby-about-cta__heading {
      font-size: 48px;
    }
  }

  .moby-about-cta__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    background: #ffffff;
    color: var(--moby-dark, #1C1A10);
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    text-decoration: none;
    border-radius: 100px;
    transition: all 0.2s ease;
  }

  .moby-about-cta__button:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-2px);
  }
</style>

{% schema %}
{
  "name": "MOBY About CTA",
  "tag": "section",
  "class": "moby-about-cta-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Recommended: 1920x800px or larger"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "A simple stick. A complete life."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Balance, Strength & Clarity"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "MOBY About CTA"
    }
  ]
}
{% endschema %}
