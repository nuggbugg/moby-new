{% comment %}
  MOBY About Philosophy Section
  - Centered text with quote box
  - "The MOBY Philosophy" section
{% endcomment %}

<section class="moby-section moby-about-philosophy">
  <div class="moby-container moby-container--narrow">
    <div class="moby-about-philosophy__content">
      {%- if section.settings.badge_text != blank -%}
        <span class="moby-about-philosophy__badge">{{ section.settings.badge_text }}</span>
      {%- endif -%}

      <h2 class="moby-about-philosophy__heading">{{ section.settings.heading }}</h2>

      <div class="moby-about-philosophy__quote-box">
        {%- if section.settings.quote != blank -%}
          <p class="moby-about-philosophy__quote">{{ section.settings.quote }}</p>
        {%- endif -%}

        {%- if section.settings.subtext != blank -%}
          <p class="moby-about-philosophy__subtext">{{ section.settings.subtext }}</p>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .moby-about-philosophy {
    background: #ffffff;
  }

  .moby-container--narrow {
    max-width: 896px;
  }

  .moby-about-philosophy__content {
    text-align: center;
  }

  .moby-about-philosophy__badge {
    display: inline-block;
    font-family: 'N27', sans-serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--moby-sage, #C9C8B6);
    margin-bottom: 12px;
  }

  .moby-about-philosophy__heading {
    font-family: 'Memoir', serif;
    font-size: 28px;
    line-height: 1.1;
    text-transform: uppercase;
    color: var(--moby-dark, #1C1A10);
    margin: 0 0 32px;
  }

  @media (min-width: 768px) {
    .moby-about-philosophy__heading {
      font-size: 36px;
    }
  }

  .moby-about-philosophy__quote-box {
    background: rgba(245, 245, 240, 0.5);
    border-radius: 6px;
    padding: 32px 24px;
  }

  @media (min-width: 768px) {
    .moby-about-philosophy__quote-box {
      padding: 48px;
    }
  }

  .moby-about-philosophy__quote {
    font-family: 'N27', sans-serif;
    font-size: 18px;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(28, 26, 16, 0.9);
    margin: 0 0 24px;
  }

  @media (min-width: 768px) {
    .moby-about-philosophy__quote {
      font-size: 22px;
    }
  }

  .moby-about-philosophy__subtext {
    font-family: 'N27', sans-serif;
    font-size: 15px;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(28, 26, 16, 0.7);
    margin: 0;
  }

  @media (min-width: 768px) {
    .moby-about-philosophy__subtext {
      font-size: 16px;
    }
  }
</style>

{% schema %}
{
  "name": "MOBY About Philosophy",
  "tag": "section",
  "class": "moby-about-philosophy-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "The MOBY Philosophy"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Packed Yet Effortless"
    },
    {
      "type": "textarea",
      "id": "quote",
      "label": "Quote text",
      "default": "\"MOBY is packed: concentrated, complete, and precise—a product built on complexity and science. Yet using it is effortless—easy, seamless, and naturally in rhythm with your life.\""
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "It's not really about doing more—it's about moving lighter, with the energy to show up fully—in work, in movement, in life."
    }
  ],
  "presets": [
    {
      "name": "MOBY About Philosophy"
    }
  ]
}
{% endschema %}
