{% comment %}
  MOBY Research Section
  - Clinical studies with expandable accordions
  - Bar chart visualizations
{% endcomment %}

<section class="moby-section moby-research">
  <div class="moby-container moby-container--narrow">
    <!-- Header -->
    <div class="moby-research__header">
      <span class="moby-research__badge">{{ section.settings.badge | default: "Clinical Evidence" }}</span>
      <h2 class="moby-research__heading">{{ section.settings.heading | default: "The Science Behind Creatine" }}</h2>
      <p class="moby-research__subheading">{{ section.settings.subheading | default: "Creatine is one of the most researched supplements in the world. Here are key findings from peer-reviewed clinical studies." }}</p>
    </div>

    <!-- Studies List -->
    <div class="moby-research__studies">
      {%- for block in section.blocks -%}
        <div class="moby-research__study" {{ block.shopify_attributes }}>
          <button 
            class="moby-research__study-header" 
            type="button"
            aria-expanded="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="study-content-{{ block.id }}"
          >
            <div class="moby-research__study-info">
              <div class="moby-research__study-meta">
                <svg class="moby-research__flask-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M9 3H15M10 3V8.5L4 18C3.33 19.17 4.17 20.5 5.5 20.5H18.5C19.83 20.5 20.67 19.17 20 18L14 8.5V3"/>
                  <path d="M7 14H17"/>
                </svg>
                <span>{{ block.settings.journal }} â€¢ {{ block.settings.year }}</span>
              </div>
              <h3 class="moby-research__study-title">{{ block.settings.title }}</h3>
            </div>
            <svg class="moby-research__chevron" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M6 9l6 6 6-6"/>
            </svg>
          </button>

          <div 
            class="moby-research__study-content{% if forloop.first %} moby-research__study-content--open{% endif %}" 
            id="study-content-{{ block.id }}"
            {% unless forloop.first %}hidden{% endunless %}
          >
            <p class="moby-research__study-finding">{{ block.settings.finding }}</p>

            <!-- Bar Chart -->
            <div class="moby-research__chart">
              <p class="moby-research__chart-label">{{ block.settings.metric }} Comparison</p>
              
              <div class="moby-research__bar-group">
                <div class="moby-research__bar-row">
                  <span class="moby-research__bar-label">Placebo</span>
                  <span class="moby-research__bar-value">{{ block.settings.placebo_result }}{{ block.settings.unit }}</span>
                </div>
                <div class="moby-research__bar-track">
                  <div class="moby-research__bar moby-research__bar--placebo" style="--bar-width: {{ block.settings.placebo_result | divided_by: 1.2 }}%"></div>
                </div>
              </div>

              <div class="moby-research__bar-group">
                <div class="moby-research__bar-row">
                  <span class="moby-research__bar-label moby-research__bar-label--highlight">Creatine</span>
                  <span class="moby-research__bar-value moby-research__bar-value--highlight">{{ block.settings.creatine_result }}{{ block.settings.unit }}</span>
                </div>
                <div class="moby-research__bar-track">
                  <div class="moby-research__bar moby-research__bar--creatine" style="--bar-width: {{ block.settings.creatine_result | divided_by: 1.2 }}%"></div>
                </div>
              </div>

              <p class="moby-research__chart-note">Higher is better</p>
            </div>

            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" target="_blank" rel="noopener noreferrer" class="moby-research__study-link">
                View Study
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3"/>
                </svg>
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const studies = document.querySelectorAll('.moby-research__study');
    
    studies.forEach(study => {
      const button = study.querySelector('.moby-research__study-header');
      const content = study.querySelector('.moby-research__study-content');
      
      button.addEventListener('click', function() {
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        
        // Close all other studies
        studies.forEach(otherStudy => {
          if (otherStudy !== study) {
            const otherButton = otherStudy.querySelector('.moby-research__study-header');
            const otherContent = otherStudy.querySelector('.moby-research__study-content');
            otherButton.setAttribute('aria-expanded', 'false');
            otherContent.hidden = true;
            otherContent.classList.remove('moby-research__study-content--open');
          }
        });
        
        // Toggle current study
        this.setAttribute('aria-expanded', !isExpanded);
        content.hidden = isExpanded;
        content.classList.toggle('moby-research__study-content--open', !isExpanded);
      });
    });
  });
</script>

