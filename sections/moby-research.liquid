{% comment %}
  MOBY Research Section
  - Clinical studies with expandable accordions
  - Animated bar chart visualizations
{% endcomment %}

<section class="moby-section moby-research">
  <div class="moby-container moby-container--narrow">
    <!-- Header -->
    <div class="moby-research__header">
      <span class="moby-research__badge">{{ section.settings.badge | default: "Clinical Evidence" }}</span>
      <h2 class="moby-research__heading">{{ section.settings.heading | default: "The Science Behind Creatine" }}</h2>
      <p class="moby-research__subheading">{{ section.settings.subheading | default: "Creatine is one of the most researched supplements in the world. Here are key findings from peer-reviewed clinical studies." }}</p>
    </div>

    <!-- Studies List -->
    <div class="moby-research__studies">
      {%- for block in section.blocks -%}
        <div class="moby-research__study" {{ block.shopify_attributes }} data-study>
          <button
            class="moby-research__study-header"
            type="button"
            aria-expanded="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="study-content-{{ block.id }}"
          >
            <div class="moby-research__study-info">
              <div class="moby-research__study-meta">
                <svg class="moby-research__flask-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M9 3H15M10 3V8.5L4 18C3.33 19.17 4.17 20.5 5.5 20.5H18.5C19.83 20.5 20.67 19.17 20 18L14 8.5V3"/>
                  <path d="M7 14H17"/>
                </svg>
                <span>{{ block.settings.journal }} â€¢ {{ block.settings.year }}</span>
              </div>
              <h3 class="moby-research__study-title">{{ block.settings.title }}</h3>
            </div>
            <svg class="moby-research__chevron" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M6 9l6 6 6-6"/>
            </svg>
          </button>

          <div
            class="moby-research__study-content{% if forloop.first %} moby-research__study-content--open{% endif %}"
            id="study-content-{{ block.id }}"
            data-content
          >
            <div class="moby-research__study-inner">
              <p class="moby-research__study-finding">{{ block.settings.finding }}</p>

              <!-- Bar Chart -->
              <div class="moby-research__chart" data-chart>
                <p class="moby-research__chart-label">{{ block.settings.metric }} Comparison</p>

                <div class="moby-research__bar-group">
                  <div class="moby-research__bar-row">
                    <span class="moby-research__bar-label">Placebo</span>
                    <span class="moby-research__bar-value">{{ block.settings.placebo_result }}{{ block.settings.unit }}</span>
                  </div>
                  <div class="moby-research__bar-track">
                    <div
                      class="moby-research__bar moby-research__bar--placebo"
                      data-bar
                      data-width="{{ block.settings.placebo_result | divided_by: 1.2 }}"
                    ></div>
                  </div>
                </div>

                <div class="moby-research__bar-group">
                  <div class="moby-research__bar-row">
                    <span class="moby-research__bar-label moby-research__bar-label--highlight">Creatine</span>
                    <span class="moby-research__bar-value moby-research__bar-value--highlight">{{ block.settings.creatine_result }}{{ block.settings.unit }}</span>
                  </div>
                  <div class="moby-research__bar-track">
                    <div
                      class="moby-research__bar moby-research__bar--creatine"
                      data-bar
                      data-width="{{ block.settings.creatine_result | divided_by: 1.2 }}"
                    ></div>
                  </div>
                </div>

                <p class="moby-research__chart-note">Higher is better</p>
              </div>

              {%- if block.settings.link != blank -%}
                <a href="{{ block.settings.link }}" target="_blank" rel="noopener noreferrer" class="moby-research__study-link">
                  <span>View Study</span>
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3"/>
                  </svg>
                </a>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const studies = document.querySelectorAll('[data-study]');

    // Animate bars when they come into view
    function animateBars(content) {
      const bars = content.querySelectorAll('[data-bar]');
      bars.forEach((bar, index) => {
        // Reset width first
        bar.style.width = '0%';
        // Animate after a small delay (stagger effect)
        setTimeout(() => {
          const targetWidth = bar.dataset.width || 0;
          bar.style.width = targetWidth + '%';
        }, 100 + (index * 150));
      });
    }

    // Set initial state for first open study
    const firstStudy = document.querySelector('[data-study]');
    if (firstStudy) {
      const firstContent = firstStudy.querySelector('[data-content]');
      if (firstContent && firstContent.classList.contains('moby-research__study-content--open')) {
        // Set height for initial open state
        const inner = firstContent.querySelector('.moby-research__study-inner');
        if (inner) {
          firstContent.style.maxHeight = inner.scrollHeight + 'px';
        }
        // Animate bars on initial load
        setTimeout(() => animateBars(firstContent), 300);
      }
    }

    studies.forEach(study => {
      const button = study.querySelector('.moby-research__study-header');
      const content = study.querySelector('[data-content]');
      const inner = content.querySelector('.moby-research__study-inner');

      button.addEventListener('click', function() {
        const isExpanded = this.getAttribute('aria-expanded') === 'true';

        // Close all other studies with animation
        studies.forEach(otherStudy => {
          if (otherStudy !== study) {
            const otherButton = otherStudy.querySelector('.moby-research__study-header');
            const otherContent = otherStudy.querySelector('[data-content]');

            if (otherButton.getAttribute('aria-expanded') === 'true') {
              otherButton.setAttribute('aria-expanded', 'false');
              otherContent.style.maxHeight = '0px';
              otherContent.classList.remove('moby-research__study-content--open');

              // Reset bars
              const otherBars = otherContent.querySelectorAll('[data-bar]');
              otherBars.forEach(bar => bar.style.width = '0%');
            }
          }
        });

        // Toggle current study with smooth animation
        if (isExpanded) {
          // Closing
          this.setAttribute('aria-expanded', 'false');
          content.style.maxHeight = '0px';
          content.classList.remove('moby-research__study-content--open');

          // Reset bars
          const bars = content.querySelectorAll('[data-bar]');
          bars.forEach(bar => bar.style.width = '0%');
        } else {
          // Opening
          this.setAttribute('aria-expanded', 'true');
          content.style.maxHeight = inner.scrollHeight + 'px';
          content.classList.add('moby-research__study-content--open');

          // Animate bars after content opens
          setTimeout(() => animateBars(content), 350);
        }
      });
    });
  });
</script>

<style>
  .moby-research {
    background: rgba(245, 245, 240, 0.3);
  }

  .moby-research__header {
    text-align: center;
    margin-bottom: 48px;
  }

  @media (min-width: 768px) {
    .moby-research__header {
      margin-bottom: 64px;
    }
  }

  .moby-research__badge {
    display: inline-block;
    font-family: 'N27', sans-serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--moby-olive, #4F4A32);
    margin-bottom: 12px;
  }

  .moby-research__heading {
    font-family: 'Memoir', serif;
    font-size: 28px;
    line-height: 1.1;
    text-transform: uppercase;
    margin: 0 0 16px;
    color: var(--moby-dark, #1C1A10);
  }

  @media (min-width: 768px) {
    .moby-research__heading {
      font-size: 40px;
    }
  }

  .moby-research__subheading {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(28, 26, 16, 0.7);
    max-width: 640px;
    margin: 0 auto;
  }

  /* Studies */
  .moby-research__studies {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .moby-research__study {
    background: #ffffff;
    border: 1px solid rgba(201, 200, 182, 0.5);
    border-radius: 8px;
    overflow: hidden;
    transition: box-shadow 0.3s ease;
  }

  .moby-research__study:has(.moby-research__study-header[aria-expanded="true"]) {
    box-shadow: 0 4px 20px rgba(28, 26, 16, 0.08);
  }

  .moby-research__study-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 16px;
    width: 100%;
    padding: 24px;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: background 0.2s ease;
  }

  .moby-research__study-header:hover {
    background: rgba(245, 245, 240, 0.5);
  }

  .moby-research__study-info {
    flex: 1;
  }

  .moby-research__study-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
  }

  .moby-research__flask-icon {
    color: var(--moby-olive, #4F4A32);
  }

  .moby-research__study-meta span {
    font-family: 'N27', sans-serif;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--moby-olive, #4F4A32);
  }

  .moby-research__study-title {
    font-family: 'Memoir', serif;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin: 0;
    color: var(--moby-dark, #1C1A10);
  }

  @media (min-width: 768px) {
    .moby-research__study-title {
      font-size: 16px;
    }
  }

  .moby-research__chevron {
    flex-shrink: 0;
    color: var(--moby-sage, #C9C8B6);
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .moby-research__study-header[aria-expanded="true"] .moby-research__chevron {
    transform: rotate(180deg);
  }

  /* Content with smooth height animation */
  .moby-research__study-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .moby-research__study-inner {
    padding: 0 24px 24px;
    border-top: 1px solid rgba(201, 200, 182, 0.3);
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.4s ease 0.1s, transform 0.4s ease 0.1s;
  }

  .moby-research__study-content--open .moby-research__study-inner {
    padding-top: 20px;
    opacity: 1;
    transform: translateY(0);
  }

  .moby-research__study-finding {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(28, 26, 16, 0.7);
    margin: 0 0 24px;
  }

  /* Bar Chart */
  .moby-research__chart {
    margin-bottom: 20px;
    background: rgba(245, 245, 240, 0.5);
    padding: 20px;
    border-radius: 8px;
  }

  .moby-research__chart-label {
    font-family: 'N27', sans-serif;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: rgba(28, 26, 16, 0.5);
    text-align: center;
    margin: 0 0 20px;
  }

  .moby-research__bar-group {
    margin-bottom: 16px;
  }

  .moby-research__bar-group:last-of-type {
    margin-bottom: 0;
  }

  .moby-research__bar-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 6px;
  }

  .moby-research__bar-label {
    font-family: 'N27', sans-serif;
    font-size: 12px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: rgba(28, 26, 16, 0.5);
  }

  .moby-research__bar-label--highlight {
    color: var(--moby-olive, #4F4A32);
    font-weight: 500;
  }

  .moby-research__bar-value {
    font-family: 'N27', sans-serif;
    font-size: 12px;
    font-weight: 500;
    color: rgba(28, 26, 16, 0.6);
  }

  .moby-research__bar-value--highlight {
    color: var(--moby-olive, #4F4A32);
    font-weight: 600;
  }

  .moby-research__bar-track {
    height: 36px;
    background: rgba(201, 200, 182, 0.25);
    border-radius: 6px;
    overflow: hidden;
    position: relative;
  }

  .moby-research__bar {
    height: 100%;
    border-radius: 6px;
    width: 0%;
    transition: width 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
  }

  /* Shimmer effect on bars */
  .moby-research__bar::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.15) 50%,
      transparent 100%
    );
    transform: translateX(-100%);
    animation: shimmer 2s ease-in-out infinite;
    animation-delay: 0.8s;
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  .moby-research__bar--placebo {
    background: rgba(201, 200, 182, 0.6);
  }

  .moby-research__bar--creatine {
    background: linear-gradient(90deg, var(--moby-olive, #4F4A32) 0%, #5a5438 100%);
  }

  .moby-research__chart-note {
    font-family: 'N27', sans-serif;
    font-size: 10px;
    text-align: center;
    color: rgba(28, 26, 16, 0.4);
    margin: 16px 0 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* View Study Link */
  .moby-research__study-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-family: 'N27', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: var(--moby-olive, #4F4A32);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: all 0.2s ease;
    margin-top: 4px;
  }

  .moby-research__study-link:hover {
    color: var(--moby-dark, #1C1A10);
  }

  .moby-research__study-link svg {
    width: 14px;
    height: 14px;
    transition: transform 0.2s ease;
  }

  .moby-research__study-link:hover svg {
    transform: translate(2px, -2px);
  }
</style>

