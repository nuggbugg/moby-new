  }

  .moby-research__chart-note {
    font-family: 'N27', sans-serif;
    font-size: 12px;
    text-align: center;
    color: rgba(28, 26, 16, 0.6);
    margin: 8px 0 0;
  }

  .moby-research__study-link {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-family: 'N27', sans-serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--moby-olive, #4F4A32);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .moby-research__study-link:hover {
    opacity: 0.8;
  }
</style>

