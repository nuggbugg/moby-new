  }

  .moby-research__bar-value {
    font-family: 'N27', sans-serif;
    font-size: 12px;
    font-weight: 500;
  }

  .moby-research__bar-value--highlight {
    color: var(--moby-olive, #4F4A32);
  }

  .moby-research__bar-track {
