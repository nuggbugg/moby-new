    border-top: 1px solid rgba(201, 200, 182, 0.3);
    margin-top: -1px;
  }

  .moby-research__study-content--open {
    padding-top: 16px;
  }

  .moby-research__study-finding {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(28, 26, 16, 0.7);
    margin: 0 0 24px;
  }

  /* Bar Chart */
  .moby-research__chart {
    margin-bottom: 16px;
  }

  .moby-research__chart-label {
    font-family: 'N27', sans-serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: rgba(28, 26, 16, 0.6);
    text-align: center;
    margin: 0 0 16px;
  }

  .moby-research__bar-group {
    margin-bottom: 12px;
  }

  .moby-research__bar-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 4px;
  }

  .moby-research__bar-label {
    font-family: 'N27', sans-serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: rgba(28, 26, 16, 0.6);
  }

