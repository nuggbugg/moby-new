  ],
  "presets": [
    {
      "name": "MOBY Why Stick Packs",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "icon": "target",
            "title": "Precise Dosing",
            "description": "Exactly 5g per stick. No scoops, no measuring, no guessing — just tear and go."
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon": "check",
            "title": "Habit Forming",
            "description": "One stick, one motion, one daily ritual. Build consistency that lasts."
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon": "package",
            "title": "Take Anywhere",
            "description": "Pocket-sized convenience. Gym bag, office desk, carry-on — always ready."
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon": "star",
            "title": "No Mess",
            "description": "No powder clouds, no sticky scoops, no spills. Clean and simple, every time."
          }
        }
      ]
    }
  ]
}
{% endschema %}
