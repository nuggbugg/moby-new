{% comment %}
  MOBY Why MOBY Section
  - Full-width background image with blur
  - Centered headline
  - 3 floating cards overlapping the bottom
{% endcomment %}

<section class="moby-why-moby">
  <!-- Background Image Section -->
  <div class="moby-why-moby__bg-section">
    {%- if section.settings.background_image != blank -%}
      <img
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        srcset="{{ section.settings.background_image | image_url: width: 800 }} 800w,
                {{ section.settings.background_image | image_url: width: 1200 }} 1200w,
                {{ section.settings.background_image | image_url: width: 1600 }} 1600w,
                {{ section.settings.background_image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt=""
        class="moby-why-moby__bg"
        loading="lazy"
        decoding="async"
      >
    {%- else -%}
      <div class="moby-why-moby__bg moby-why-moby__placeholder"></div>
    {%- endif -%}
    <div class="moby-why-moby__overlay"></div>

    <div class="moby-why-moby__content">
      {%- if section.settings.badge != blank -%}
        <span class="moby-why-moby__badge">{{ section.settings.badge }}</span>
      {%- endif -%}
      
      {%- if section.settings.heading != blank -%}
        <h2 class="moby-why-moby__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <p class="moby-why-moby__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>
  </div>

  <!-- Floating Cards -->
  <div class="moby-why-moby__cards-wrapper">
    <div class="moby-container">
      <div class="moby-why-moby__cards">
        {%- for block in section.blocks -%}
          <div class="moby-why-moby__card" {{ block.shopify_attributes }}>
            <div class="moby-why-moby__card-icon">
              {%- render 'moby-icon', icon: block.settings.icon -%}
            </div>
            <h3 class="moby-why-moby__card-title">{{ block.settings.title }}</h3>
            <p class="moby-why-moby__card-description">{{ block.settings.description }}</p>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

<style>
  .moby-why-moby {
    margin-top: 64px;
  }

  @media (min-width: 768px) {
    .moby-why-moby {
      margin-top: 96px;
    }
  }

  .moby-why-moby__bg-section {
    position: relative;
    height: 500px;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .moby-why-moby__bg-section {
      height: 550px;
    }
  }

  .moby-why-moby__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: blur(3px);
  }

  .moby-why-moby__placeholder {
    background: var(--moby-olive, #4F4A32);
  }

  .moby-why-moby__overlay {
    position: absolute;
    inset: 0;
    background: rgba(28, 26, 16, 0.2);
  }

  .moby-why-moby__content {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 0 24px 128px;
  }

  @media (min-width: 768px) {
    .moby-why-moby__content {
      padding-bottom: 160px;
    }
  }

  .moby-why-moby__badge {
    font-family: 'N27', sans-serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 12px;
  }

  .moby-why-moby__heading {
    font-family: 'Memoir', serif;
    font-size: 28px;
    line-height: 1.1;
    text-transform: uppercase;
    color: #ffffff;
    max-width: 640px;
    margin: 0 0 16px;
  }

  @media (min-width: 768px) {
    .moby-why-moby__heading {
      font-size: 48px;
    }
  }

  .moby-why-moby__subheading {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    max-width: 560px;
    margin: 0;
  }

  @media (min-width: 768px) {
    .moby-why-moby__subheading {
      font-size: 16px;
    }
  }

  /* Floating Cards */
  .moby-why-moby__cards-wrapper {
    margin-top: -96px;
    position: relative;
    z-index: 10;
    padding-bottom: 64px;
  }

  @media (min-width: 768px) {
    .moby-why-moby__cards-wrapper {
      margin-top: -112px;
    }
  }

  .moby-why-moby__cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
  }

  @media (min-width: 640px) {
    .moby-why-moby__cards {
      grid-template-columns: repeat(3, 1fr);
      gap: 16px;
    }
  }

  .moby-why-moby__card {
    background: #ffffff;
    border: 1px solid rgba(201, 200, 182, 0.3);
    border-radius: 8px;
    padding: 20px;
    text-align: center;
    box-shadow: 0 8px 24px rgba(28, 26, 16, 0.05);
  }

  @media (min-width: 768px) {
    .moby-why-moby__card {
      padding: 24px;
    }
  }

  .moby-why-moby__card-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 16px;
    border-radius: 50%;
    border: 1px solid rgba(201, 200, 182, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .moby-why-moby__card-icon {
      width: 56px;
      height: 56px;
    }
  }

  .moby-why-moby__card-icon svg {
    width: 20px;
    height: 20px;
    color: var(--moby-dark, #1C1A10);
  }

  @media (min-width: 768px) {
    .moby-why-moby__card-icon svg {
      width: 24px;
      height: 24px;
    }
  }

  .moby-why-moby__card-title {
    font-family: 'Memoir', serif;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin: 0 0 8px;
    color: var(--moby-dark, #1C1A10);
  }

  @media (min-width: 768px) {
    .moby-why-moby__card-title {
      font-size: 16px;
      margin-bottom: 12px;
    }
  }

  .moby-why-moby__card-description {
    font-family: 'N27', sans-serif;
    font-size: 12px;
    font-weight: 300;
    line-height: 1.5;
    color: var(--moby-sage, #C9C8B6);
    margin: 0;
  }

  @media (min-width: 768px) {
    .moby-why-moby__card-description {
      font-size: 14px;
    }
  }
</style>

