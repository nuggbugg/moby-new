<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('[data-section-id="{{ section.id }}"]');
  if (!section) return;

  const basePrice = {{ current_variant.price }};
  const packSelector = section.querySelector('#pack-selector');
  const quantityInput = section.querySelector('#quantity-input');
  const sellingPlanInput = section.querySelector('#selling-plan-input');
  const btnPrice = section.querySelector('#btn-price');
  const form = section.querySelector('#moby-buy-box-form');
  const purchaseOptions = section.querySelector('#purchase-options');
  const sellingPlanSelect = section.querySelector('#selling-plan-select');

  let currentQuantity = 1;
  let isSubscription = false;
  let subscriptionDiscount = {{ product.selling_plan_groups.first.selling_plans.first.price_adjustments.first.value | default: 10 }};

  function formatMoney(cents) {
    return (cents / 100).toLocaleString('{{ localization.language.iso_code | default: "en" }}', {
      style: 'currency',
      currency: '{{ cart.currency.iso_code | default: "SEK" }}'
    });
  }

  function getPackDiscount(qty) {
    if (qty === 2) return 0.10;
    if (qty === 3) return 0.15;
    return 0;
  }

  function updateButton() {
    const packDiscount = getPackDiscount(currentQuantity);
    let total = basePrice * currentQuantity * (1 - packDiscount);

    // Apply subscription discount if selected
    if (isSubscription) {
      total = total * (1 - subscriptionDiscount / 100);
    }

    if (btnPrice) btnPrice.textContent = formatMoney(total);
    if (quantityInput) quantityInput.value = currentQuantity;
  }

  // Purchase option selection (one-time vs subscribe)
  if (purchaseOptions) {
    const options = purchaseOptions.querySelectorAll('.moby-buy-box__option');

    // Set initial state
    options.forEach(opt => {
      if (opt.querySelector('input:checked')) {
        opt.classList.add('is-selected');
      }
    });

    options.forEach(option => {
      option.addEventListener('click', function() {
        // Update visual selection
        options.forEach(opt => opt.classList.remove('is-selected'));
        this.classList.add('is-selected');
        this.querySelector('input').checked = true;

        // Check if subscription is selected
        const optionType = this.dataset.option;
        isSubscription = (optionType === 'subscribe');

        // Update selling plan input
        if (isSubscription && sellingPlanSelect) {
          sellingPlanInput.value = sellingPlanSelect.value;
          // Update discount from selected plan
          const selectedOption = sellingPlanSelect.options[sellingPlanSelect.selectedIndex];
          if (selectedOption && selectedOption.dataset.discount) {
            subscriptionDiscount = parseInt(selectedOption.dataset.discount) || 10;
          }
        } else {
          sellingPlanInput.value = '';
        }

        updateButton();
      });
    });
  }

  // Selling plan dropdown change
  if (sellingPlanSelect) {
    sellingPlanSelect.addEventListener('change', function() {
      if (isSubscription) {
        sellingPlanInput.value = this.value;
        // Update discount
        const selectedOption = this.options[this.selectedIndex];
        if (selectedOption && selectedOption.dataset.discount) {
          subscriptionDiscount = parseInt(selectedOption.dataset.discount) || 10;
        }
        updateButton();
      }
    });
  }

  // Pack selection
  if (packSelector) {
    packSelector.querySelectorAll('.moby-buy-box__pack').forEach(pack => {
      pack.addEventListener('click', function() {
        packSelector.querySelectorAll('.moby-buy-box__pack').forEach(p => p.classList.remove('active'));
        this.classList.add('active');
        this.querySelector('input').checked = true;
        currentQuantity = parseInt(this.dataset.quantity);
        updateButton();
      });
    });
  }

  // Thumbnail gallery
  section.querySelectorAll('.moby-buy-box__thumbnail').forEach(thumb => {
    thumb.addEventListener('click', function() {
      section.querySelectorAll('.moby-buy-box__thumbnail').forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      const mainImage = section.querySelector('.moby-buy-box__image');
      if (mainImage && this.dataset.imageUrl) {
        mainImage.src = this.dataset.imageUrl;
      }
    });
  });

  // AJAX Add to Cart - prevents redirect, opens drawer instead
  if (form) {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();

      const submitBtn = form.querySelector('button[type="submit"]');
      const originalContent = submitBtn.innerHTML;

      // Show loading state
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<span>Adding...</span>';

      try {
        const formData = new FormData(form);
        const data = {
          id: formData.get('id'),
          quantity: parseInt(formData.get('quantity')) || 1
        };

        // Add selling plan if selected
        const sellingPlan = formData.get('selling_plan');
        if (sellingPlan && sellingPlan !== '') {
          data.selling_plan = sellingPlan;
        }

        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify(data)
        });

        if (!response.ok) {
          throw new Error('Failed to add to cart');
        }

        // Success - open cart drawer
        submitBtn.innerHTML = '<span>Added!</span>';

        // Open the cart drawer if available
        if (typeof window.openCartDrawer === 'function') {
          // Small delay to show "Added!" state
          setTimeout(() => {
            window.openCartDrawer();
            submitBtn.innerHTML = originalContent;
            submitBtn.disabled = false;
          }, 300);
        } else {
          // Fallback: dispatch event for other cart drawers
          document.dispatchEvent(new CustomEvent('cart:refresh'));
          setTimeout(() => {
            submitBtn.innerHTML = originalContent;
            submitBtn.disabled = false;
          }, 1000);
        }

      } catch (error) {
        console.error('Add to cart error:', error);
        submitBtn.innerHTML = '<span>Error - Try Again</span>';
        setTimeout(() => {
          submitBtn.innerHTML = originalContent;
          submitBtn.disabled = false;
        }, 2000);
      }
    });
  }

  // Initial update
  updateButton();
});
</script>

