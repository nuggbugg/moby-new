<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('[data-section-id="{{ section.id }}"]');
  if (!section) return;

  const basePrice = {{ current_variant.price }};
  const packSelector = section.querySelector('#pack-selector');
  const quantityInput = section.querySelector('#quantity-input');
  const sellingPlanInput = section.querySelector('#selling-plan-input');
  const btnPrice = section.querySelector('#btn-price');
  const form = section.querySelector('#moby-buy-box-form');
  const purchaseOptions = section.querySelector('#purchase-options');
  const sellingPlanSelect = section.querySelector('#selling-plan-select');

  let currentQuantity = 1;
  let isSubscription = false;
  let subscriptionDiscount = {{ product.selling_plan_groups.first.selling_plans.first.price_adjustments.first.value | default: 10 }};

  function formatMoney(cents) {
    const currency = '{{ cart.currency.iso_code | default: "SEK" }}';
    const amount = cents / 100;

    // No decimals for kr currencies
    if (['SEK', 'NOK', 'DKK'].includes(currency)) {
      return Math.round(amount) + ' kr';
    }

    // Standard formatting for other currencies
    return amount.toLocaleString('{{ localization.language.iso_code | default: "en" }}', {
      style: 'currency',
      currency: currency,
      minimumFractionDigits: 0,
      maximumFractionDigits: 0
    });
  }

  function getPackDiscount(qty) {
    if (qty === 2) return 0.10;
    if (qty === 3) return 0.15;
    return 0;
  }

  function updateButton() {
    const packDiscount = getPackDiscount(currentQuantity);
    let total = basePrice * currentQuantity * (1 - packDiscount);

    // Apply subscription discount if selected
    if (isSubscription) {
      total = total * (1 - subscriptionDiscount / 100);
    }

    if (btnPrice) btnPrice.textContent = formatMoney(total);
    if (quantityInput) quantityInput.value = currentQuantity;

    // Update button text based on purchase type
    const btnText = section.querySelector('#btn-text');
    if (btnText) {
      btnText.textContent = isSubscription ? 'Subscribe' : 'Add to Cart';
    }
  }

  // Purchase option selection (one-time vs subscribe)
  if (purchaseOptions) {
    const options = purchaseOptions.querySelectorAll('.moby-buy-box__option');

    // Set initial state
    options.forEach(opt => {
      if (opt.querySelector('input:checked')) {
        opt.classList.add('is-selected');
      }
    });

    options.forEach(option => {
      option.addEventListener('click', function() {
        // Update visual selection
        options.forEach(opt => opt.classList.remove('is-selected'));
        this.classList.add('is-selected');
        this.querySelector('input').checked = true;

        // Check if subscription is selected
        const optionType = this.dataset.option;
        isSubscription = (optionType === 'subscribe');

        // Update selling plan input
        if (isSubscription && sellingPlanSelect && sellingPlanSelect.value) {
          const planId = sellingPlanSelect.value;
          if (sellingPlanInput) {
            sellingPlanInput.value = planId;
          }
          // Update discount from selected plan
          const selectedOption = sellingPlanSelect.options[sellingPlanSelect.selectedIndex];
          if (selectedOption && selectedOption.dataset.discount) {
            subscriptionDiscount = parseInt(selectedOption.dataset.discount) || 10;
          }
        } else {
          if (sellingPlanInput) {
            sellingPlanInput.value = '';
          }
        }

        updateButton();
      });
    });
  }

  // Selling plan dropdown change
  if (sellingPlanSelect) {
    sellingPlanSelect.addEventListener('change', function() {
      if (isSubscription && sellingPlanInput) {
        sellingPlanInput.value = this.value;
        // Update discount
        const selectedOption = this.options[this.selectedIndex];
        if (selectedOption && selectedOption.dataset.discount) {
          subscriptionDiscount = parseInt(selectedOption.dataset.discount) || 10;
        }
        updateButton();
      }
    });
  }

  // Pack selection
  if (packSelector) {
    packSelector.querySelectorAll('.moby-buy-box__pack').forEach(pack => {
      pack.addEventListener('click', function() {
        packSelector.querySelectorAll('.moby-buy-box__pack').forEach(p => p.classList.remove('active'));
        this.classList.add('active');
        this.querySelector('input').checked = true;
        currentQuantity = parseInt(this.dataset.quantity);
        updateButton();
      });
    });
  }

  // Thumbnail gallery
  const thumbnails = section.querySelectorAll('.moby-buy-box__thumbnail');
  const dots = section.querySelectorAll('.moby-buy-box__dot');
  const mainImageContainer = section.querySelector('.moby-buy-box__main-image');
  const mainImage = section.querySelector('.moby-buy-box__image');

  function switchToImage(index) {
    if (index < 0 || index >= thumbnails.length) return;
    // Update thumbnails
    thumbnails.forEach(t => t.classList.remove('active'));
    thumbnails[index].classList.add('active');
    // Update dots
    dots.forEach(d => d.classList.remove('active'));
    if (dots[index]) dots[index].classList.add('active');
    // Update main image
    const newImageUrl = thumbnails[index].dataset.imageUrl;
    if (mainImage && newImageUrl) {
      mainImage.src = newImageUrl;
      mainImage.srcset = '';
      const baseUrl = newImageUrl.split('?')[0];
      const srcset = [400, 600, 800].map(w => `${baseUrl}?width=${w} ${w}w`).join(', ');
      mainImage.srcset = srcset;
    }
  }

  function getCurrentIndex() {
    return Array.from(thumbnails).findIndex(t => t.classList.contains('active'));
  }

  thumbnails.forEach((thumb, index) => {
    thumb.addEventListener('click', function() {
      switchToImage(index);
    });
  });

  // Touch swipe support for mobile
  if (mainImageContainer && thumbnails.length > 1) {
    let touchStartX = 0;
    let touchStartY = 0;
    let touchEndX = 0;

    mainImageContainer.addEventListener('touchstart', function(e) {
      touchStartX = e.changedTouches[0].screenX;
      touchStartY = e.changedTouches[0].screenY;
    }, { passive: true });

    mainImageContainer.addEventListener('touchend', function(e) {
      touchEndX = e.changedTouches[0].screenX;
      const touchEndY = e.changedTouches[0].screenY;
      const diffX = touchStartX - touchEndX;
      const diffY = Math.abs(touchStartY - touchEndY);

      // Only trigger if horizontal swipe is greater than vertical (not a scroll)
      // and swipe distance is significant (> 50px)
      if (Math.abs(diffX) > 50 && Math.abs(diffX) > diffY) {
        const currentIndex = getCurrentIndex();
        if (diffX > 0) {
          // Swipe left - next image
          switchToImage(currentIndex + 1 < thumbnails.length ? currentIndex + 1 : 0);
        } else {
          // Swipe right - previous image
          switchToImage(currentIndex - 1 >= 0 ? currentIndex - 1 : thumbnails.length - 1);
        }
      }
    }, { passive: true });
  }

  // Dot click handlers
  dots.forEach((dot, index) => {
    dot.addEventListener('click', function() {
      switchToImage(index);
    });
  });

  // Check stock availability and update button state
  // This runs on page load and when returning to page
  async function checkStockAndUpdateButton() {
    if (!form) return;

    const submitBtn = form.querySelector('button[type="submit"]');
    if (!submitBtn || submitBtn.disabled) return;

    const variantId = form.querySelector('input[name="id"]')?.value;
    const productId = {{ product.id }};

    try {
      // Fetch real-time product data and cart in parallel
      const [productResponse, cartResponse] = await Promise.all([
        fetch('/products/{{ product.handle }}.js', { headers: { 'Accept': 'application/json' } }),
        fetch('/cart.js', { headers: { 'Accept': 'application/json' } })
      ]);

      const productData = await productResponse.json();
      const cart = await cartResponse.json();

      // Find the variant to get real-time inventory
      const variant = productData.variants.find(v => String(v.id) === String(variantId));

      if (variant && variant.inventory_management === 'shopify' && variant.inventory_policy === 'deny') {
        const inventoryQty = variant.inventory_quantity || 0;

        // Count ALL items of this product in cart
        let currentQtyInCart = 0;
        cart.items.forEach(item => {
          if (String(item.product_id) === String(productId)) {
            currentQtyInCart += item.quantity;
          }
        });

        // Check if stock is already exhausted
        if (currentQtyInCart >= inventoryQty) {
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<span>No more stock available</span>';
        }
      }
    } catch (error) {
      console.error('Stock check error:', error);
    }
  }

  // Run stock check on page load
  checkStockAndUpdateButton();

  // Also run when page becomes visible again (returning from another tab/page)
  document.addEventListener('visibilitychange', function() {
    if (document.visibilityState === 'visible') {
      checkStockAndUpdateButton();
    }
  });

  // Handle browser back/forward navigation (bfcache)
  window.addEventListener('pageshow', function(event) {
    if (event.persisted) {
      // Page was restored from bfcache
      checkStockAndUpdateButton();
    }
  });

  // Listen for cart updates (e.g., from cart drawer)
  document.addEventListener('cart:refresh', checkStockAndUpdateButton);

  // AJAX Add to Cart - prevents redirect, opens drawer instead
  // Includes real-time stock validation to prevent overselling
  if (form) {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      e.stopPropagation(); // Prevent global cart interceptor from also firing

      const submitBtn = form.querySelector('button[type="submit"]');
      const originalContent = submitBtn.innerHTML;

      // Show loading state
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<span>Adding...</span>';

      try {
        const formData = new FormData(form);
        const variantId = formData.get('id');
        const requestedQty = parseInt(formData.get('quantity')) || 1;
        const productId = {{ product.id }};

        // Fetch real-time product data and cart in parallel
        const [productResponse, cartResponse] = await Promise.all([
          fetch('/products/{{ product.handle }}.js', { headers: { 'Accept': 'application/json' } }),
          fetch('/cart.js', { headers: { 'Accept': 'application/json' } })
        ]);

        const productData = await productResponse.json();
        const cart = await cartResponse.json();

        // Find the variant to get real-time inventory
        const variant = productData.variants.find(v => String(v.id) === String(variantId));

        if (variant && variant.inventory_management === 'shopify' && variant.inventory_policy === 'deny') {
          const inventoryQty = variant.inventory_quantity || 0;

          // Count ALL items of this product in cart (both regular and subscription)
          let currentQtyInCart = 0;
          cart.items.forEach(item => {
            if (String(item.product_id) === String(productId)) {
              currentQtyInCart += item.quantity;
            }
          });

          const totalAfterAdd = currentQtyInCart + requestedQty;

          if (totalAfterAdd > inventoryQty) {
            const remaining = inventoryQty - currentQtyInCart;
            if (remaining <= 0) {
              throw new Error('No more stock available');
            } else {
              throw new Error(`Only ${remaining} more available`);
            }
          }
        }

        const data = {
          id: variantId,
          quantity: requestedQty
        };

        // Add selling plan if subscription is selected
        // First check the hidden input, then fall back to the dropdown directly
        let sellingPlan = formData.get('selling_plan');
        if ((!sellingPlan || sellingPlan === '') && isSubscription && sellingPlanSelect) {
          sellingPlan = sellingPlanSelect.value;
        }
        if (sellingPlan && sellingPlan !== '') {
          data.selling_plan = sellingPlan;
        }

        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify(data)
        });

        if (!response.ok) {
          const errorData = await response.json().catch(() => ({}));
          const errorMessage = errorData.description || errorData.message || 'Could not add to cart';
          throw new Error(errorMessage);
        }

        // Success - open cart drawer
        submitBtn.innerHTML = '<span>Added!</span>';

        // Open the cart drawer if available
        if (typeof window.openCartDrawer === 'function') {
          // Small delay to show "Added!" state
          setTimeout(() => {
            window.openCartDrawer();
            submitBtn.innerHTML = originalContent;
            submitBtn.disabled = false;
            // Re-check stock after adding to cart
            checkStockAndUpdateButton();
          }, 300);
        } else {
          // Fallback: dispatch event for other cart drawers
          document.dispatchEvent(new CustomEvent('cart:refresh'));
          setTimeout(() => {
            submitBtn.innerHTML = originalContent;
            submitBtn.disabled = false;
            // Re-check stock after adding to cart
            checkStockAndUpdateButton();
          }, 1000);
        }

      } catch (error) {
        console.error('Add to cart error:', error);
        // Show error message (e.g., "Not enough items in stock")
        const errorText = error.message.length < 50 ? error.message : 'Error - Try Again';
        submitBtn.innerHTML = `<span>${errorText}</span>`;
        setTimeout(() => {
          submitBtn.innerHTML = originalContent;
          submitBtn.disabled = false;
        }, 2000);
      }
    });
  }

  // Initial update
  updateButton();
});
</script>

