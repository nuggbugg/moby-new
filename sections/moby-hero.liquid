{% comment %}
  MOBY Custom Hero Section
  - Full-width background image
  - Large heading with subheading
  - CTA button with arrow
  - Free shipping badge
{% endcomment %}

{% liquid
  assign has_image = false
  if section.settings.image != blank
    assign has_image = true
  endif
%}

<section class="moby-hero{% unless has_image %} moby-hero--placeholder{% endunless %}">
  {% if has_image %}
    <div class="moby-hero__image-wrapper">
      {{ section.settings.image | image_url: width: 2560 | image_tag:
        class: 'moby-hero__image',
        loading: 'eager',
        fetchpriority: 'high',
        sizes: '100vw',
        widths: '375, 750, 1100, 1500, 1920, 2560'
      }}
    </div>
  {% else %}
    <!-- Placeholder background -->
    <div class="moby-hero__placeholder">
      <img
        src="https://images.unsplash.com/photo-1551632811-561732d1e306?w=1920&q=80&auto=format&fit=crop"
        alt="Mountain hiking placeholder"
        class="moby-hero__image"
        loading="eager"
      />
    </div>
  {% endif %}

  <div class="moby-hero__overlay"></div>

  <div class="moby-hero__container">
    <div class="moby-hero__content">
      <!-- Main Heading -->
      <h1 class="moby-hero__heading">
        {{ section.settings.heading | default: "SCIENCE-BACKED CLARITY AND STRENGTH" }}
      </h1>

      <!-- Subheading -->
      <p class="moby-hero__subheading">
        {{ section.settings.subheading | default: "Effortless daily creatine for brain, body, and balance" }}
      </p>

      <!-- CTA Button -->
      <div class="moby-hero__cta-wrapper">
        <a href="{{ section.settings.button_link | default: routes.all_products_collection_url }}" class="moby-hero__button">
          <span>{{ section.settings.button_text | default: "SHOP NOW" }}</span>
          <svg class="moby-hero__arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M3 8H13M13 8L9 4M13 8L9 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>

        <!-- Free Shipping Badge -->
        {% if section.settings.show_shipping_badge %}
          <div class="moby-hero__badge">
            <svg class="moby-hero__check" width="24" height="24" viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1.5"/>
              <path d="M8 12L11 15L16 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>{{ section.settings.shipping_text | default: "FREE SHIPPING ON ORDERS OVER €43" }}</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .moby-hero {
    position: relative;
    min-height: 85vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .moby-hero__image-wrapper,
  .moby-hero__placeholder {
    position: absolute;
    inset: 0;
  }

  .moby-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .moby-hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      90deg,
      rgba(28, 26, 16, 0.55) 0%,
      rgba(28, 26, 16, 0.35) 35%,
      rgba(28, 26, 16, 0.1) 60%,
      transparent 100%
    );
    pointer-events: none;
  }

  .moby-hero__container {
    position: relative;
    width: 90%;
    max-width: 1296px;
    margin: 0 auto;
    padding: 140px 0 80px;
  }

  @media (min-width: 768px) {
    .moby-hero__container {
      padding: 160px 0 100px;
    }
  }

  .moby-hero__content {
    max-width: 672px;
  }

  .moby-hero__heading {
    font-family: 'Memoir', var(--font-heading--family, Georgia, serif);
    font-size: 48px;
    font-weight: 400;
    line-height: 1.1;
    letter-spacing: -0.01em;
    color: #ffffff;
    margin: 0 0 24px;
    text-transform: uppercase;
  }

  @media (min-width: 768px) {
    .moby-hero__heading {
      font-size: 72px;
    }
  }

  .moby-hero__subheading {
    font-family: 'N27', var(--font-body--family, system-ui, sans-serif);
    font-size: 18px;
    font-weight: 300;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 32px;
  }

  @media (min-width: 768px) {
    .moby-hero__subheading {
      font-size: 20px;
    }
  }

  .moby-hero__cta-wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
  }

  .moby-hero__button {
    display: inline-flex;
    align-items: center;
    gap: 16px;
    padding: 20px 48px;
    background: var(--moby-lime);
    border: none;
    border-radius: 4px;
    color: var(--moby-dark);
    font-family: 'N27', var(--font-body--family, system-ui, sans-serif);
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .moby-hero__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(249, 253, 181, 0.25);
  }

  .moby-hero__arrow {
    transition: transform 0.3s ease;
  }

  .moby-hero__button:hover .moby-hero__arrow {
    transform: translateX(4px);
  }

  .moby-hero__badge {
    display: flex;
    align-items: center;
    gap: 12px;
    color: var(--moby-lime);
    font-family: 'N27', var(--font-body--family, system-ui, sans-serif);
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }

  .moby-hero__check {
    color: var(--moby-lime);
    flex-shrink: 0;
  }

  /* Mobile Styles */
  @media (max-width: 767px) {
    .moby-hero__overlay {
      background: linear-gradient(
        0deg,
        rgba(28, 26, 16, 0.6) 0%,
        rgba(28, 26, 16, 0.4) 40%,
        rgba(28, 26, 16, 0.2) 70%,
        transparent 100%
      );
    }

    .moby-hero__container {
      padding: 100px 0 60px;
    }

    .moby-hero__cta-wrapper {
      gap: 16px;
    }

    .moby-hero__button {
      padding: 14px 28px;
      font-size: 12px;
    }

    .moby-hero__badge {
      font-size: 12px;
    }
  }
</style>

{% schema %}
{
  "name": "MOBY Hero",
  "class": "moby-hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image",
      "info": "Recommended: 1920x1080px or larger"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SCIENCE-BACKED CLARITY AND STRENGTH"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Effortless daily creatine for brain, body, and balance"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "checkbox",
      "id": "show_shipping_badge",
      "label": "Show shipping badge",
      "default": true
    },
    {
      "type": "text",
      "id": "shipping_text",
      "label": "Shipping badge text",
      "default": "FREE SHIPPING ON ORDERS OVER €43"
    }
  ],
  "presets": [
    {
      "name": "MOBY Hero"
    }
  ]
}
{% endschema %}
