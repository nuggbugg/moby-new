{% comment %}
  MOBY About Quality Section
  - Header with description
  - Pill-shaped credential badges
{% endcomment %}

<section class="moby-section moby-about-quality">
  <div class="moby-container">
    <div class="moby-about-quality__content">
      <!-- Header -->
      <div class="moby-about-quality__header">
        {%- if section.settings.badge_text != blank -%}
          <span class="moby-about-quality__badge">{{ section.settings.badge_text }}</span>
        {%- endif -%}

        <h2 class="moby-about-quality__heading">{{ section.settings.heading }}</h2>

        {%- if section.settings.description != blank -%}
          <p class="moby-about-quality__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>

      <!-- Credential Badges -->
      <div class="moby-about-quality__badges">
        {%- for block in section.blocks -%}
          <div class="moby-about-quality__credential" {{ block.shopify_attributes }}>
            <span class="moby-about-quality__credential-icon">
              {%- case block.settings.icon -%}
                {%- when 'map-pin' -%}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 2C8.13 2 5 5.13 5 9C5 14.25 12 22 12 22C12 22 19 14.25 19 9C19 5.13 15.87 2 12 2Z"/>
                    <circle cx="12" cy="9" r="3"/>
                  </svg>
                {%- when 'flask' -%}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M9 3H15M10 3V8.5L4 18C3.33 19.17 4.17 20.5 5.5 20.5H18.5C19.83 20.5 20.67 19.17 20 18L14 8.5V3"/>
                  </svg>
                {%- when 'beaker' -%}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M9 3H15M10 3V8.5L4 18C3.33 19.17 4.17 20.5 5.5 20.5H18.5C19.83 20.5 20.67 19.17 20 18L14 8.5V3"/>
                    <path d="M7 14H17"/>
                  </svg>
                {%- when 'check-circle' -%}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M9 12L11 14L15 10"/>
                  </svg>
              {%- endcase -%}
            </span>
            <span class="moby-about-quality__credential-label">{{ block.settings.label }}</span>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

<style>
  .moby-about-quality {
    background: rgba(245, 245, 240, 0.5);
  }

  .moby-about-quality__content {
    text-align: center;
  }

  .moby-about-quality__header {
    margin-bottom: 48px;
  }

  .moby-about-quality__badge {
    display: inline-block;
    font-family: 'N27', sans-serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--moby-sage, #C9C8B6);
    margin-bottom: 12px;
  }

  .moby-about-quality__heading {
    font-family: 'Memoir', serif;
    font-size: 28px;
    line-height: 1.1;
    text-transform: uppercase;
    color: var(--moby-dark, #1C1A10);
    margin: 0 0 16px;
  }

  @media (min-width: 768px) {
    .moby-about-quality__heading {
      font-size: 36px;
    }
  }

  .moby-about-quality__description {
    font-family: 'N27', sans-serif;
    font-size: 15px;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(28, 26, 16, 0.8);
    max-width: 640px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .moby-about-quality__description {
      font-size: 16px;
    }
  }

  .moby-about-quality__badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px;
  }

  @media (min-width: 768px) {
    .moby-about-quality__badges {
      gap: 24px;
    }
  }

  .moby-about-quality__credential {
    display: flex;
    align-items: center;
    gap: 12px;
    background: #ffffff;
    border-radius: 100px;
    padding: 12px 20px;
    box-shadow: 0 2px 8px rgba(28, 26, 16, 0.04);
  }

  .moby-about-quality__credential-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--moby-dark, #1C1A10);
  }

  .moby-about-quality__credential-icon svg {
    width: 20px;
    height: 20px;
  }

  .moby-about-quality__credential-label {
    font-family: 'N27', sans-serif;
    font-size: 13px;
    font-weight: 500;
    color: var(--moby-dark, #1C1A10);
  }

  @media (min-width: 768px) {
    .moby-about-quality__credential-label {
      font-size: 14px;
    }
  }
</style>

{% schema %}
{
  "name": "MOBY About Quality",
  "tag": "section",
  "class": "moby-about-quality-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Our Commitment"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Quality You Can Trust"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Every MOBY product is manufactured in Sweden, adhering to the highest European quality and safety standards. We use only pharmaceutical-grade creatine monohydrate, rigorously tested for purity and potency."
    }
  ],
  "blocks": [
    {
      "type": "credential",
      "name": "Credential",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "map-pin", "label": "Map Pin (Location)" },
            { "value": "flask", "label": "Flask (Pharmaceutical)" },
            { "value": "beaker", "label": "Beaker (Tested)" },
            { "value": "check-circle", "label": "Check Circle (Standards)" }
          ],
          "default": "map-pin"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Credential Label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MOBY About Quality",
      "blocks": [
        {
          "type": "credential",
          "settings": {
            "icon": "map-pin",
            "label": "Produced in Sweden"
          }
        },
        {
          "type": "credential",
          "settings": {
            "icon": "flask",
            "label": "Pharmaceutical-Grade"
          }
        },
        {
          "type": "credential",
          "settings": {
            "icon": "beaker",
            "label": "Rigorously Tested"
          }
        },
        {
          "type": "credential",
          "settings": {
            "icon": "check-circle",
            "label": "European Standards"
          }
        }
      ]
    }
  ]
}
{% endschema %}
