{% comment %}
  MOBY 404 Section
  - Branded 404 page with MOBY styling
  - Search bar, quick links, featured product
{% endcomment %}

<section class="moby-404">
  <div class="moby-container">
    <div class="moby-404__content">
      <!-- 404 Display -->
      <h1 class="moby-404__heading">404</h1>
      <h2 class="moby-404__subheading">Page Not Found</h2>
      <p class="moby-404__text">
        The page you're looking for doesn't exist or has been moved. Let's get you back on track.
      </p>

      <!-- Search Form -->
      <form action="{{ routes.search_url }}" method="get" class="moby-404__search">
        <div class="moby-404__search-wrapper">
          <svg class="moby-404__search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="M21 21l-4.35-4.35"></path>
          </svg>
          <input
            type="text"
            name="q"
            placeholder="Search..."
            class="moby-404__search-input"
            aria-label="Search"
          >
          <button type="submit" class="moby-404__search-btn">Search</button>
        </div>
      </form>

      <!-- Quick Links -->
      <div class="moby-404__links">
        <a href="/" class="moby-404__link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          Home
        </a>
        <a href="/products/moby-creatine-sticks" class="moby-404__link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <path d="M16 10a4 4 0 0 1-8 0"></path>
          </svg>
          Shop
        </a>
        <a href="/pages/about-us" class="moby-404__link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
          About Us
        </a>
        <a href="/blogs/power-station" class="moby-404__link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
          Power Station
        </a>
      </div>
    </div>

    <!-- Featured Product -->
    {%- assign featured_product = collections['all'].products.first -%}
    {%- if featured_product -%}
      <div class="moby-404__product">
        <p class="moby-404__product-label">While you're here, check out our product</p>

        <a href="{{ featured_product.url }}" class="moby-404__product-card">
          <div class="moby-404__product-image">
            {%- if featured_product.featured_image -%}
              {{ featured_product.featured_image | image_url: width: 200 | image_tag:
                loading: 'lazy',
                widths: '100, 150, 200',
                alt: featured_product.title
              }}
            {%- endif -%}
          </div>

          <div class="moby-404__product-info">
            <h3 class="moby-404__product-title">{{ featured_product.title }}</h3>
            <p class="moby-404__product-subtitle">Premium Creatine Monohydrate</p>
            <p class="moby-404__product-price">{{ featured_product.price | money }}</p>
          </div>

          <svg class="moby-404__product-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .moby-404 {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 120px 0 80px;
    background: var(--color-background, #ffffff);
  }

  .moby-404 .moby-container {
    width: 100%;
    max-width: 1296px;
  }

  .moby-404__content {
    text-align: center;
    margin-bottom: 64px;
  }

  .moby-404__heading {
    font-family: 'Memoir', serif;
    font-size: clamp(100px, 20vw, 160px);
    font-weight: 400;
    line-height: 1;
    color: var(--moby-olive, #4F4A32);
    margin: 0 0 16px;
    letter-spacing: -0.02em;
  }

  .moby-404__subheading {
    font-family: 'Memoir', serif;
    font-size: clamp(24px, 4vw, 32px);
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--moby-dark, #1C1A10);
    margin: 0 0 16px;
  }

  .moby-404__text {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    line-height: 1.6;
    color: rgba(28, 26, 16, 0.75);
    max-width: 480px;
    margin: 0 auto 40px;
  }

  /* Search */
  .moby-404__search {
    max-width: 480px;
    margin: 0 auto 48px;
  }

  .moby-404__search-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .moby-404__search-icon {
    position: absolute;
    left: 16px;
    color: rgba(28, 26, 16, 0.7);
    pointer-events: none;
  }

  .moby-404__search-input {
    width: 100%;
    height: 52px;
    padding: 0 100px 0 48px;
    font-family: 'N27', sans-serif;
    font-size: 13px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--moby-dark, #1C1A10);
    background: rgba(245, 245, 240, 0.5);
    border: 1px solid rgba(28, 26, 16, 0.1);
    border-radius: 6px;
    outline: none;
    transition: border-color 0.2s ease, background 0.2s ease;
  }

  .moby-404__search-input::placeholder {
    color: rgba(28, 26, 16, 0.7);
  }

  .moby-404__search-input:focus {
    border-color: var(--moby-olive, #4F4A32);
    background: #ffffff;
  }

  .moby-404__search-btn {
    position: absolute;
    right: 6px;
    height: 40px;
    padding: 0 20px;
    font-family: 'N27', sans-serif;
    font-size: 12px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: #ffffff;
    background: var(--moby-olive, #4F4A32);
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .moby-404__search-btn:hover {
    background: var(--moby-dark, #1C1A10);
  }

  /* Quick Links */
  .moby-404__links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
  }

  .moby-404__link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: 'N27', sans-serif;
    font-size: 12px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--moby-dark, #1C1A10);
    text-decoration: none;
    padding: 12px 20px;
    border: 1px solid rgba(28, 26, 16, 0.15);
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .moby-404__link:hover {
    border-color: var(--moby-olive, #4F4A32);
    background: var(--moby-olive, #4F4A32);
    color: #ffffff;
  }

  /* Featured Product */
  .moby-404__product {
    max-width: 500px;
    margin: 0 auto;
  }

  .moby-404__product-label {
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: rgba(28, 26, 16, 0.7);
    text-align: center;
    margin: 0 0 20px;
  }

  .moby-404__product-card {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 20px;
    background: rgba(245, 245, 240, 0.5);
    border: 1px solid rgba(28, 26, 16, 0.08);
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .moby-404__product-card:hover {
    border-color: var(--moby-olive, #4F4A32);
    box-shadow: 0 8px 32px rgba(28, 26, 16, 0.08);
  }

  .moby-404__product-image {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 6px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .moby-404__product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .moby-404__product-card:hover .moby-404__product-image img {
    transform: scale(1.05);
  }

  .moby-404__product-info {
    flex: 1;
    text-align: left;
  }

  .moby-404__product-title {
    font-family: 'Memoir', serif;
    font-size: 18px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.01em;
    color: var(--moby-dark, #1C1A10);
    margin: 0 0 4px;
    transition: color 0.2s ease;
  }

  .moby-404__product-card:hover .moby-404__product-title {
    color: var(--moby-olive, #4F4A32);
  }

  .moby-404__product-subtitle {
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: rgba(28, 26, 16, 0.7);
    margin: 0 0 8px;
  }

  .moby-404__product-price {
    font-family: 'Memoir', serif;
    font-size: 18px;
    font-weight: 400;
    color: var(--moby-dark, #1C1A10);
    margin: 0;
  }

  .moby-404__product-arrow {
    flex-shrink: 0;
    color: rgba(28, 26, 16, 0.7);
    transition: all 0.2s ease;
  }

  .moby-404__product-card:hover .moby-404__product-arrow {
    color: var(--moby-olive, #4F4A32);
    transform: translateX(4px);
  }

  /* Mobile */
  @media (max-width: 640px) {
    .moby-404 {
      padding: 100px 20px 60px;
    }

    .moby-404__content {
      margin-bottom: 48px;
    }

    .moby-404__links {
      gap: 8px;
    }

    .moby-404__link {
      padding: 10px 16px;
      font-size: 11px;
    }

    .moby-404__product-card {
      padding: 16px;
      gap: 16px;
    }

    .moby-404__product-image {
      width: 64px;
      height: 64px;
    }

    .moby-404__product-title {
      font-size: 16px;
    }

    .moby-404__product-price {
      font-size: 16px;
    }
  }
</style>

{% schema %}
