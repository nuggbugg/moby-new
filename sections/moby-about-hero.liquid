{% comment %}
  MOBY About Hero Section
  - 60vh height centered hero for About Us page
  - Background image with dark overlay
  - Centered heading and description
{% endcomment %}

<section class="moby-about-hero">
  {%- if section.settings.background_image != blank -%}
    <div class="moby-about-hero__image-wrapper">
      {{ section.settings.background_image | image_url: width: 2560 | image_tag:
        class: 'moby-about-hero__image',
        loading: 'eager',
        fetchpriority: 'high',
        sizes: '100vw',
        widths: '375, 750, 1100, 1500, 1920, 2560',
        alt: section.settings.heading | default: 'About MOBY'
      }}
    </div>
  {%- else -%}
    <div class="moby-about-hero__placeholder"></div>
  {%- endif -%}

  <div class="moby-about-hero__overlay"></div>

  <div class="moby-about-hero__content">
    <h1 class="moby-about-hero__heading">{{ section.settings.heading }}</h1>
    {%- if section.settings.description != blank -%}
      <p class="moby-about-hero__description">{{ section.settings.description }}</p>
    {%- endif -%}
  </div>
</section>

<style>
  .moby-about-hero {
    position: relative;
    height: 60vh;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .moby-about-hero__image-wrapper,
  .moby-about-hero__placeholder {
    position: absolute;
    inset: 0;
  }

  .moby-about-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .moby-about-hero__placeholder {
    background: var(--moby-olive, #4F4A32);
  }

  .moby-about-hero__overlay {
    position: absolute;
    inset: 0;
    background: rgba(28, 26, 16, 0.6);
    pointer-events: none;
  }

  .moby-about-hero__content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 0 16px;
    max-width: 800px;
  }

  .moby-about-hero__heading {
    font-family: 'Memoir', serif;
    font-size: 48px;
    font-weight: 400;
    line-height: 1.1;
    text-transform: uppercase;
    color: #ffffff;
    margin: 0 0 16px;
  }

  @media (min-width: 768px) {
    .moby-about-hero__heading {
      font-size: 72px;
    }
  }

  .moby-about-hero__description {
    font-family: 'N27', sans-serif;
    font-size: 16px;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    max-width: 560px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 768px) {
    .moby-about-hero__description {
      font-size: 18px;
    }
  }
</style>

{% schema %}
{
  "name": "MOBY About Hero",
  "tag": "section",
  "class": "moby-about-hero-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Recommended: 1920x1080px or larger"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About MOBY"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Redefining daily energy, strength, and clarity for everyone"
    }
  ],
  "presets": [
    {
      "name": "MOBY About Hero"
    }
  ]
}
{% endschema %}
