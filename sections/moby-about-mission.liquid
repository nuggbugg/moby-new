{% comment %}
  MOBY About Mission Section
  - 2-column grid: image left, text right
  - "Our Mission" section for About Us page
{% endcomment %}

<section class="moby-section moby-about-mission">
  <div class="moby-container">
    <div class="moby-about-mission__grid">
      <!-- Image Column -->
      <div class="moby-about-mission__image-col">
        <div class="moby-about-mission__image-wrapper">
          {%- if section.settings.image != blank -%}
            {{ section.settings.image | image_url: width: 800 | image_tag:
              class: 'moby-about-mission__image',
              loading: 'lazy',
              sizes: '(min-width: 768px) 50vw, 100vw',
              widths: '375, 500, 600, 800',
              alt: section.settings.heading | default: 'Our Mission'
            }}
          {%- else -%}
            <div class="moby-about-mission__placeholder"></div>
          {%- endif -%}
        </div>
      </div>

      <!-- Text Column -->
      <div class="moby-about-mission__text-col">
        {%- if section.settings.badge_text != blank -%}
          <span class="moby-about-mission__badge">{{ section.settings.badge_text }}</span>
        {%- endif -%}

        <h2 class="moby-about-mission__heading">{{ section.settings.heading }}</h2>

        {%- if section.settings.text_1 != blank -%}
          <p class="moby-about-mission__text moby-about-mission__text--primary">{{ section.settings.text_1 }}</p>
        {%- endif -%}

        {%- if section.settings.text_2 != blank -%}
          <p class="moby-about-mission__text">{{ section.settings.text_2 }}</p>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .moby-about-mission {
    background: #ffffff;
  }

  .moby-about-mission__grid {
    display: grid;
    gap: 32px;
    align-items: center;
  }

  @media (min-width: 768px) {
    .moby-about-mission__grid {
      grid-template-columns: 1fr 1fr;
      gap: 64px;
    }
  }

  .moby-about-mission__image-wrapper {
    aspect-ratio: 4 / 3;
    border-radius: 6px;
    overflow: hidden;
  }

  .moby-about-mission__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .moby-about-mission__placeholder {
    width: 100%;
    height: 100%;
    background: var(--moby-olive, #4F4A32);
  }

  .moby-about-mission__text-col {
    padding: 0;
  }

  @media (min-width: 768px) {
    .moby-about-mission__text-col {
      padding: 24px 0;
    }
  }

  .moby-about-mission__badge {
    display: inline-block;
    font-family: 'N27', sans-serif;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--moby-sage, #C9C8B6);
    margin-bottom: 16px;
  }

  .moby-about-mission__heading {
    font-family: 'Memoir', serif;
    font-size: 28px;
    line-height: 1.1;
    text-transform: uppercase;
    color: var(--moby-dark, #1C1A10);
    margin: 0 0 24px;
  }

  @media (min-width: 768px) {
    .moby-about-mission__heading {
      font-size: 36px;
    }
  }

  .moby-about-mission__text {
    font-family: 'N27', sans-serif;
    font-size: 15px;
    font-weight: 300;
    line-height: 1.7;
    color: rgba(28, 26, 16, 0.8);
    margin: 0 0 24px;
  }

  .moby-about-mission__text:last-child {
    margin-bottom: 0;
  }

  .moby-about-mission__text--primary {
    font-size: 17px;
  }

  @media (min-width: 768px) {
    .moby-about-mission__text {
      font-size: 16px;
    }

    .moby-about-mission__text--primary {
      font-size: 18px;
    }
  }
</style>

{% schema %}
{
  "name": "MOBY About Mission",
  "tag": "section",
  "class": "moby-about-mission-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Recommended: 800x600px or larger"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Our Mission"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Breaking Old Stereotypes"
    },
    {
      "type": "textarea",
      "id": "text_1",
      "label": "Primary text",
      "default": "MOBY exists to break old stereotypes around creatine, making energy, strength, and clarity accessible to everyone who wants to live and perform better every day."
    },
    {
      "type": "textarea",
      "id": "text_2",
      "label": "Secondary text",
      "default": "We're reframing creatine as a daily essential for those who care not just about strength, but also mental clarity, focus, and overall vitality. What was once a routine is now one simple motion."
    }
  ],
  "presets": [
    {
      "name": "MOBY About Mission"
    }
  ]
}
{% endschema %}
