{% comment %}
  MOBY CTA Banner Section
  - Background image with blur
  - Centered text and CTA button
  - Used for B2B/Partner section
{% endcomment %}

<section class="moby-section moby-cta-banner">
  <div class="moby-cta-banner__inner">
    {%- if section.settings.background_image != blank -%}
      <img
        src="{{ section.settings.background_image | image_url: width: 1400 }}"
        srcset="{{ section.settings.background_image | image_url: width: 600 }} 600w,
                {{ section.settings.background_image | image_url: width: 900 }} 900w,
                {{ section.settings.background_image | image_url: width: 1200 }} 1200w,
                {{ section.settings.background_image | image_url: width: 1400 }} 1400w"
        sizes="(min-width: 768px) 90vw, 100vw"
        alt="{{ section.settings.background_image.alt | default: '' }}"
        class="moby-cta-banner__bg"
        loading="lazy"
        decoding="async"
      >
    {%- else -%}
      <div class="moby-cta-banner__bg moby-cta-banner__placeholder"></div>
    {%- endif -%}

    <div class="moby-cta-banner__overlay"></div>

    <div class="moby-cta-banner__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="moby-cta-banner__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <p class="moby-cta-banner__description">{{ section.settings.description }}</p>
      {%- endif -%}
      
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="moby-cta-banner__button">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .moby-cta-banner {
    padding: 64px 16px;
    background: var(--color-background, #ffffff);
  }

  @media (min-width: 768px) {
    .moby-cta-banner {
      padding: 64px 32px;
    }
  }

  .moby-cta-banner__inner {
    position: relative;
    max-width: 1296px;
    margin: 0 auto;
    padding: 96px 24px;
    border-radius: 6px;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .moby-cta-banner__inner {
      padding: 128px 48px;
    }
  }

  .moby-cta-banner__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .moby-cta-banner__placeholder {
    background: var(--moby-olive, #4F4A32);
  }

  .moby-cta-banner__overlay {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(2px);
  }

  .moby-cta-banner__content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .moby-cta-banner__heading {
    font-family: 'Memoir', serif;
    font-size: 32px;
    line-height: 1.1;
    text-transform: uppercase;
    color: #ffffff;
    margin: 0 0 24px;
  }

  @media (min-width: 768px) {
    .moby-cta-banner__heading {
      font-size: 56px;
    }
  }

  .moby-cta-banner__description {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    max-width: 768px;
    margin: 0 auto 32px;
  }

  @media (min-width: 768px) {
    .moby-cta-banner__description {
      font-size: 16px;
    }
  }

  .moby-cta-banner__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    background: var(--moby-lime, #F9FDB5);
    color: var(--moby-dark, #1C1A10);
    font-family: 'N27', sans-serif;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .moby-cta-banner__button:hover {
    background: rgba(249, 253, 181, 0.9);
    transform: translateY(-2px);
  }
</style>

{% schema %}
{
  "name": "MOBY CTA Banner",
  "tag": "section",
  "class": "moby-cta-banner-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Partner with MOBY"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Available for distribution in pharmacies, gyms, and wellness retailers. Bring science-backed performance to your customers."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Partner with Moby"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "MOBY CTA Banner"
    }
  ]
}
{% endschema %}
