{% comment %}
  MOBY Partner Form Section
  - Contact form for B2B inquiries
  - Uses Shopify's native contact form
{% endcomment %}

<section class="moby-section moby-partner-form">
  <div class="moby-container moby-container--narrow">
    <!-- Header -->
    <div class="moby-partner-form__header">
      <h2 class="moby-partner-form__heading">{{ section.settings.heading }}</h2>
      {%- if section.settings.subheading != blank -%}
        <p class="moby-partner-form__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>

    <!-- Form -->
    {%- form 'contact', class: 'moby-partner-form__form' -%}
      {%- if form.posted_successfully? -%}
        <div class="moby-partner-form__success">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M9 12L11 14L15 10"/>
          </svg>
          <p>{{ section.settings.success_message }}</p>
        </div>
      {%- endif -%}

      {%- if form.errors -%}
        <div class="moby-partner-form__errors">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <!-- Partnership Type -->
      <div class="moby-partner-form__field">
        <label for="contact_partnership_type" class="moby-partner-form__label">
          Partnership Type <span class="moby-partner-form__required">*</span>
        </label>
        <select id="contact_partnership_type" name="contact[partnership_type]" required class="moby-partner-form__select">
          <option value="">Select partnership type</option>
          <option value="Pharmacy / Health Store">Pharmacy / Health Store</option>
          <option value="Gym / Fitness Center">Gym / Fitness Center</option>
          <option value="Retail / E-commerce">Retail / E-commerce</option>
          <option value="Distributor">Distributor</option>
          <option value="Other">Other</option>
        </select>
      </div>

      <!-- Company & Contact Name Row -->
      <div class="moby-partner-form__row">
        <div class="moby-partner-form__field">
          <label for="contact_company" class="moby-partner-form__label">
            Company Name <span class="moby-partner-form__required">*</span>
          </label>
          <input type="text" id="contact_company" name="contact[company]" required class="moby-partner-form__input" maxlength="100">
        </div>

        <div class="moby-partner-form__field">
          <label for="contact_name" class="moby-partner-form__label">
            Contact Name <span class="moby-partner-form__required">*</span>
          </label>
          <input type="text" id="contact_name" name="contact[name]" required class="moby-partner-form__input" maxlength="100">
        </div>
      </div>

      <!-- Email & Phone Row -->
      <div class="moby-partner-form__row">
        <div class="moby-partner-form__field">
          <label for="contact_email" class="moby-partner-form__label">
            Email <span class="moby-partner-form__required">*</span>
          </label>
          <input type="email" id="contact_email" name="contact[email]" required class="moby-partner-form__input" maxlength="255" autocomplete="email" autocorrect="off" autocapitalize="off">
        </div>

        <div class="moby-partner-form__field">
          <label for="contact_phone" class="moby-partner-form__label">
            Phone
          </label>
          <input type="tel" id="contact_phone" name="contact[phone]" class="moby-partner-form__input" maxlength="30">
        </div>
      </div>

      <!-- Country -->
      <div class="moby-partner-form__field">
        <label for="contact_country" class="moby-partner-form__label">
          Country <span class="moby-partner-form__required">*</span>
        </label>
        <input type="text" id="contact_country" name="contact[country]" required class="moby-partner-form__input" maxlength="100">
      </div>

      <!-- Message -->
      <div class="moby-partner-form__field">
        <label for="contact_body" class="moby-partner-form__label">
          Message <span class="moby-partner-form__required">*</span>
        </label>
        <textarea id="contact_body" name="contact[body]" required rows="5" class="moby-partner-form__textarea" placeholder="Tell us about your business and how you'd like to partner with MOBY..." maxlength="2000"></textarea>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="moby-partner-form__submit">
        {{ section.settings.button_label }}
      </button>
    {%- endform -%}
  </div>
</section>

<style>
  .moby-partner-form {
    background: rgba(245, 245, 240, 0.3);
    padding: 80px 0;
  }

  @media (min-width: 768px) {
    .moby-partner-form {
      padding: 112px 0;
    }
  }

  .moby-container--narrow {
    max-width: 768px;
  }

  .moby-partner-form__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .moby-partner-form__heading {
    font-family: 'Memoir', serif;
    font-size: 28px;
    line-height: 1.1;
    text-transform: uppercase;
    color: var(--moby-dark, #1C1A10);
    margin: 0 0 16px;
  }

  @media (min-width: 768px) {
    .moby-partner-form__heading {
      font-size: 36px;
    }
  }

  .moby-partner-form__subheading {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(28, 26, 16, 0.7);
    margin: 0;
  }

  .moby-partner-form__form {
    background: #ffffff;
    padding: 32px 24px;
    border-radius: 4px;
    box-shadow: 0 2px 8px rgba(28, 26, 16, 0.04);
  }

  @media (min-width: 768px) {
    .moby-partner-form__form {
      padding: 40px;
    }
  }

  .moby-partner-form__success {
    display: flex;
    align-items: center;
    gap: 12px;
    background: rgba(76, 175, 80, 0.1);
    border: 1px solid rgba(76, 175, 80, 0.3);
    padding: 16px;
    border-radius: 4px;
    margin-bottom: 24px;
  }

  .moby-partner-form__success svg {
    color: #4CAF50;
    flex-shrink: 0;
  }

  .moby-partner-form__success p {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    color: #4CAF50;
    margin: 0;
  }

  .moby-partner-form__errors {
    background: rgba(244, 67, 54, 0.1);
    border: 1px solid rgba(244, 67, 54, 0.3);
    padding: 16px;
    border-radius: 4px;
    margin-bottom: 24px;
    font-family: 'N27', sans-serif;
    font-size: 14px;
    color: #F44336;
  }

  .moby-partner-form__row {
    display: grid;
    gap: 24px;
    margin-bottom: 24px;
  }

  @media (min-width: 768px) {
    .moby-partner-form__row {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .moby-partner-form__field {
    margin-bottom: 24px;
  }

  .moby-partner-form__row .moby-partner-form__field {
    margin-bottom: 0;
  }

  .moby-partner-form__label {
    display: block;
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--moby-dark, #1C1A10);
    margin-bottom: 8px;
  }

  .moby-partner-form__required {
    color: #F44336;
  }

  .moby-partner-form__input,
  .moby-partner-form__select,
  .moby-partner-form__textarea {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid rgba(201, 200, 182, 0.5);
    border-radius: 4px;
    font-family: 'N27', sans-serif;
    font-size: 15px;
    font-weight: 300;
    color: var(--moby-dark, #1C1A10);
    background: #ffffff;
    transition: border-color 0.2s ease;
  }

  .moby-partner-form__input:focus,
  .moby-partner-form__select:focus,
  .moby-partner-form__textarea:focus {
    outline: none;
    border-color: var(--moby-dark, #1C1A10);
  }

  .moby-partner-form__input::placeholder,
  .moby-partner-form__textarea::placeholder {
    color: rgba(28, 26, 16, 0.7);
  }

  .moby-partner-form__select {
    appearance: none;
    background-image: url("data:image/svg+xml,%3Csvg width='10' height='6' viewBox='0 0 10 6' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L5 5L9 1' stroke='%231C1A10' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: right 16px center;
    padding-right: 40px;
    cursor: pointer;
  }

  .moby-partner-form__textarea {
    resize: vertical;
    min-height: 120px;
  }

  .moby-partner-form__submit {
    width: 100%;
    padding: 16px 32px;
    background: var(--moby-lime, #F9FDB5);
    color: var(--moby-dark, #1C1A10);
    border: none;
    border-radius: 4px;
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    cursor: pointer;
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .moby-partner-form__submit:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }
</style>

{% schema %}
{
  "name": "MOBY Partner Form",
  "tag": "section",
  "class": "moby-partner-form-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get in Touch"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Tell us about your business and partnership interests"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Send Message"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "Thank you! We'll be in touch within 2 business days."
    }
  ],
  "presets": [
    {
      "name": "MOBY Partner Form"
    }
  ]
}
{% endschema %}
