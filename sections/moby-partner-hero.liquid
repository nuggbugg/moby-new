{% comment %}
  MOBY Partner Hero Section
  - 40-50vh hero for Partner/B2B page
  - Badge, heading, and subheading
{% endcomment %}

<section class="moby-partner-hero">
  {%- if section.settings.background_image != blank -%}
    <div class="moby-partner-hero__image-wrapper">
      {{ section.settings.background_image | image_url: width: 2560 | image_tag:
        class: 'moby-partner-hero__image',
        loading: 'eager',
        fetchpriority: 'high',
        sizes: '100vw',
        widths: '375, 750, 1100, 1500, 1920, 2560'
      }}
    </div>
  {%- else -%}
    <div class="moby-partner-hero__placeholder"></div>
  {%- endif -%}

  <div class="moby-partner-hero__overlay"></div>

  <div class="moby-partner-hero__content">
    {%- if section.settings.badge_text != blank -%}
      <span class="moby-partner-hero__badge">{{ section.settings.badge_text }}</span>
    {%- endif -%}

    <h1 class="moby-partner-hero__heading">{{ section.settings.heading }}</h1>

    {%- if section.settings.description != blank -%}
      <p class="moby-partner-hero__description">{{ section.settings.description }}</p>
    {%- endif -%}
  </div>
</section>

<style>
  .moby-partner-hero {
    position: relative;
    height: 50vh;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  @media (max-width: 767px) {
    .moby-partner-hero {
      height: 40vh;
      min-height: 300px;
    }
  }

  .moby-partner-hero__image-wrapper,
  .moby-partner-hero__placeholder {
    position: absolute;
    inset: 0;
  }

  .moby-partner-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .moby-partner-hero__placeholder {
    background: var(--moby-olive, #4F4A32);
  }

  .moby-partner-hero__overlay {
    position: absolute;
    inset: 0;
    background: rgba(28, 26, 16, 0.6);
    pointer-events: none;
  }

  .moby-partner-hero__content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 0 16px;
    max-width: 800px;
  }

  .moby-partner-hero__badge {
    display: inline-block;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 24px;
  }

  @media (max-width: 767px) {
    .moby-partner-hero__badge {
      padding: 6px 12px;
      font-size: 10px;
      margin-bottom: 16px;
    }
  }

  .moby-partner-hero__heading {
    font-family: 'Memoir', serif;
    font-size: 48px;
    font-weight: 400;
    line-height: 1.1;
    text-transform: uppercase;
    color: #ffffff;
    margin: 0 0 16px;
  }

  @media (min-width: 768px) {
    .moby-partner-hero__heading {
      font-size: 72px;
    }
  }

  @media (max-width: 767px) {
    .moby-partner-hero__heading {
      font-size: 32px;
      margin-bottom: 12px;
    }
  }

  .moby-partner-hero__description {
    font-family: 'N27', sans-serif;
    font-size: 16px;
    font-weight: 300;
    line-height: 1.5;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    max-width: 640px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 768px) {
    .moby-partner-hero__description {
      font-size: 18px;
    }
  }

  @media (max-width: 767px) {
    .moby-partner-hero__description {
      font-size: 14px;
    }
  }
</style>

{% schema %}
{
  "name": "MOBY Partner Hero",
  "tag": "section",
  "class": "moby-partner-hero-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Recommended: 1920x800px or larger"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "B2B Partnerships"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Partner with MOBY"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Bring science-backed creatine to your customers"
    }
  ],
  "presets": [
    {
      "name": "MOBY Partner Hero"
    }
  ]
}
{% endschema %}
