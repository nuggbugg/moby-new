{% comment %}
  MOBY Newsletter Popup
  - Triggers on exit intent and/or after delay
  - Teaser button on right side of screen
  - Uses localStorage to remember if user dismissed/submitted
  - DataLayer tracking for analytics
  - Optional redirect after signup
{% endcomment %}

<script src="{{ 'dialog.js' | asset_url }}" type="module"></script>

<newsletter-popup-component
  class="newsletter-popup"
  data-delay="{{ section.settings.popup_delay | times: 1000 | default: 12000 }}"
  data-show-once="{{ section.settings.show_once }}"
  data-enabled="{{ section.settings.enabled }}"
  data-exit-intent="{{ section.settings.exit_intent }}"
  data-show-teaser="{{ section.settings.show_teaser }}"
  data-teaser-text="{{ section.settings.teaser_text | escape }}"
  data-success-redirect-url="{{ section.settings.success_redirect_url }}"
  data-already-signed-up-text="{{ section.settings.already_signed_up_text | escape }}"
  data-success-message="{{ section.settings.success_message | escape }}"
>
  <!-- Teaser Button (Right Side) -->
  <div class="newsletter-popup__teaser-wrapper" ref="teaserWrapper">
    <button
      ref="teaserButton"
      class="newsletter-popup__teaser"
      aria-label="Open signup popup"
    >
      <span class="newsletter-popup__teaser-icon">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
      </span>
      <span class="newsletter-popup__teaser-text" ref="teaserText">{{ section.settings.teaser_text | default: 'Get Discount' }}</span>
    </button>
    <button
      ref="teaserClose"
      class="newsletter-popup__teaser-close"
      aria-label="Close teaser"
    >
      <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>

  <dialog
    ref="dialog"
    class="newsletter-popup__dialog"
    aria-labelledby="newsletter-popup-heading"
  >
    <div class="newsletter-popup__container">
      <!-- Close Button -->
      <button
        ref="closeButton"
        class="newsletter-popup__close"
        aria-label="{{ 'accessibility.close_dialog' | t }}"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>

      <!-- Visual Side -->
      <div class="newsletter-popup__visual">
        {% if section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url: width: 600 }}"
            alt="{{ section.settings.image.alt | default: 'Newsletter signup' }}"
            class="newsletter-popup__image"
            loading="lazy"
          >
        {% else %}
          <!-- Default decorative pattern -->
          <div class="newsletter-popup__pattern">
            <svg viewBox="0 0 200 200" class="newsletter-popup__pattern-svg">
              <defs>
                <pattern id="popup-dots" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                  <circle cx="2" cy="2" r="1.5" fill="currentColor" opacity="0.3"/>
                </pattern>
              </defs>
              <rect width="200" height="200" fill="url(#popup-dots)"/>
              <circle cx="100" cy="100" r="60" fill="none" stroke="currentColor" stroke-width="0.5" opacity="0.2"/>
              <circle cx="100" cy="100" r="40" fill="none" stroke="currentColor" stroke-width="0.5" opacity="0.3"/>
            </svg>
            <div class="newsletter-popup__pattern-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
              </svg>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Content Side -->
      <div class="newsletter-popup__content">
        <!-- Badge -->
        {% if section.settings.badge != blank %}
          <span class="newsletter-popup__badge">{{ section.settings.badge }}</span>
        {% endif %}

        <!-- Heading -->
        <h2 id="newsletter-popup-heading" class="newsletter-popup__heading">
          {{ section.settings.heading | default: 'Join the MOBY Family' }}
        </h2>

        <!-- Description -->
        <p class="newsletter-popup__description">
          {{ section.settings.description | default: 'Get exclusive access to our launch discount and be first to know when we go live.' }}
        </p>

        <!-- Form -->
        {%- form 'customer', class: 'newsletter-popup__form', id: 'newsletter-popup-form' -%}
          <input type="hidden" name="contact[tags]" value="waitlist,newsletter,popup">
          <input type="hidden" name="contact[accepts_marketing]" value="true">

          <div class="newsletter-popup__form-group">
            <input
              type="email"
              name="contact[email]"
              id="newsletter-popup-email"
              class="newsletter-popup__input"
              placeholder="{{ section.settings.placeholder | default: 'Enter your email' }}"
              required
              autocomplete="email"
              aria-label="Email address"
            >
          </div>

          <button type="submit" class="newsletter-popup__submit">
            {{ section.settings.button_text | default: 'Get My Discount' }}
          </button>

          {%- if form.posted_successfully? -%}
            <div class="newsletter-popup__success" data-success="true">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>{{ section.settings.success_message | default: "You're in! Check your email for your discount code." }}</span>
            </div>
          {%- endif -%}

          {%- if form.errors -%}
            <p class="newsletter-popup__error">
              {{ form.errors.messages['email'] | default: 'Please enter a valid email address.' }}
            </p>
          {%- endif -%}
        {%- endform -%}

        <!-- Privacy Note -->
        <p class="newsletter-popup__privacy">
          {{ section.settings.privacy_text | default: 'No spam, ever. Unsubscribe anytime.' }}
        </p>
      </div>
    </div>
  </dialog>
</newsletter-popup-component>

<script>
  class NewsletterPopupComponent extends HTMLElement {
    constructor() {
      super();
      this.storageKey = 'moby-newsletter-popup-dismissed';
      this.signupStorageKey = 'moby-notify-signup';
      this.teaserDismissedKey = 'moby-newsletter-teaser-dismissed';
      this.exitIntentFired = false;
      this.hasOpened = false;
    }

    connectedCallback() {
      // Query DOM elements after component is connected
      this.dialog = this.querySelector('[ref="dialog"]');
      this.closeButton = this.querySelector('[ref="closeButton"]');
      this.teaserWrapper = this.querySelector('[ref="teaserWrapper"]');
      this.teaserButton = this.querySelector('[ref="teaserButton"]');
      this.teaserClose = this.querySelector('[ref="teaserClose"]');
      this.teaserText = this.querySelector('[ref="teaserText"]');
      this.form = this.querySelector('form');

      const enabled = this.dataset.enabled === 'true';
      const showOnce = this.dataset.showOnce === 'true';
      const exitIntent = this.dataset.exitIntent === 'true';
      const showTeaser = this.dataset.showTeaser === 'true';
      const delay = parseInt(this.dataset.delay, 10) || 12000;
      this.successRedirectUrl = this.dataset.successRedirectUrl || '';
      this.alreadySignedUpText = this.dataset.alreadySignedUpText || '';

      // Allow forcing popup via URL parameter (for testing)
      const urlParams = new URLSearchParams(window.location.search);
      const forceShow = urlParams.get('show_newsletter') === 'true';

      // Clear localStorage if force reset is requested
      if (urlParams.get('reset_newsletter') === 'true') {
        localStorage.removeItem(this.storageKey);
        localStorage.removeItem(this.signupStorageKey);
        console.log('Newsletter popup: localStorage cleared');
      }

      // Check if already signed up (from notify popup)
      const alreadySignedUp = this.checkAlreadySignedUp();

      // Update teaser button if already signed up
      if (alreadySignedUp && this.alreadySignedUpText && this.teaserText) {
        this.teaserText.textContent = this.alreadySignedUpText;
        this.teaserWrapper?.classList.add('newsletter-popup__teaser-wrapper--signed-up');
      }

      // Check if teaser was dismissed
      const teaserDismissed = localStorage.getItem(this.teaserDismissedKey);

      // Show/hide teaser button (only if not dismissed)
      if (showTeaser && enabled && !teaserDismissed) {
        this.teaserWrapper?.classList.add('newsletter-popup__teaser-wrapper--visible');
      }

      // Teaser close button click
      this.teaserClose?.addEventListener('click', (e) => {
        e.stopPropagation();
        localStorage.setItem(this.teaserDismissedKey, 'true');
        this.teaserWrapper?.classList.remove('newsletter-popup__teaser-wrapper--visible');
      });

      // Teaser button click
      this.teaserButton?.addEventListener('click', () => {
        this.showDialog('teaser_click');
      });

      // Listen for notify button clicks (from product pages)
      document.addEventListener('open-newsletter-popup', (e) => {
        const trigger = e.detail?.trigger || 'external';
        this.showDialog(trigger, true); // Force open even if already opened
      });

      // Close button and backdrop click handlers (must be before early return)
      this.closeButton?.addEventListener('click', () => this.closeDialog());
      this.dialog?.addEventListener('click', (e) => {
        if (e.target === this.dialog) this.closeDialog();
      });
      this.dialog?.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') this.closeDialog();
      });

      // Handle form submission via AJAX (must be before early return)
      this.form?.addEventListener('submit', async (e) => {
        e.preventDefault();

        const email = this.form.querySelector('input[type="email"]')?.value;
        const submitBtn = this.form.querySelector('.newsletter-popup__submit');
        const originalBtnText = submitBtn?.textContent;

        // Show loading state
        if (submitBtn) {
          submitBtn.disabled = true;
          submitBtn.textContent = 'Signing up...';
        }

        try {
          const formData = new FormData(this.form);
          const response = await fetch('/contact', {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });

          // Track and mark as signed up
          this.pushDataLayer('newsletter_form_submitted', { email });
          localStorage.setItem(this.storageKey, 'submitted');
          this.markAsSignedUp();
          this.pushDataLayer('newsletter_signup_success');

          // Show success state
          this.showSuccessState();

        } catch (error) {
          console.error('Newsletter signup error:', error);
          // Still show success (form data was likely captured)
          this.pushDataLayer('newsletter_form_submitted', { email });
          localStorage.setItem(this.storageKey, 'submitted');
          this.markAsSignedUp();
          this.showSuccessState();
        }
      });

      // Check if form was just submitted successfully via page reload (fallback)
      const successEl = this.querySelector('[data-success="true"]');
      if (successEl) {
        localStorage.setItem(this.storageKey, 'submitted');
        this.markAsSignedUp();
        this.pushDataLayer('newsletter_signup_success');

        // Hide form inputs and show only success message
        this.querySelector('.newsletter-popup__form-group')?.style.setProperty('display', 'none');
        this.querySelector('.newsletter-popup__submit')?.style.setProperty('display', 'none');

        // Show the success state briefly then redirect or close
        this.showDialog('form_success');
        if (this.successRedirectUrl) {
          setTimeout(() => {
            window.location.href = this.successRedirectUrl;
          }, 1500);
        } else {
          setTimeout(() => this.closeDialog(), 3000);
        }
        return;
      }

      if (!enabled && !forceShow) return;

      // Check if already dismissed/submitted (skip if force showing)
      if (showOnce && localStorage.getItem(this.storageKey) && !forceShow) {
        return;
      }

      // Exit intent listener (desktop only)
      if (exitIntent && !('ontouchstart' in window)) {
        document.addEventListener('mouseout', (e) => {
          if (this.exitIntentFired || this.hasOpened) return;
          if (e.clientY <= 0 || e.clientX <= 0 || e.clientX >= window.innerWidth) {
            this.exitIntentFired = true;
            this.showDialog('exit_intent');
          }
        });
      }

      // Timer-based trigger
      if (delay > 0) {
        setTimeout(() => {
          if (!this.hasOpened) {
            this.showDialog('timer');
          }
        }, delay);
      }
    }

    checkAlreadySignedUp() {
      try {
        const signups = JSON.parse(localStorage.getItem(this.signupStorageKey) || '{}');
        return signups['_global'] ? true : false;
      } catch (e) {
        return false;
      }
    }

    markAsSignedUp() {
      try {
        const signups = JSON.parse(localStorage.getItem(this.signupStorageKey) || '{}');
        signups['_global'] = Date.now();
        localStorage.setItem(this.signupStorageKey, JSON.stringify(signups));
      } catch (e) {}
    }

    showSuccessState() {
      // Hide form inputs
      this.querySelector('.newsletter-popup__form-group')?.style.setProperty('display', 'none');
      this.querySelector('.newsletter-popup__submit')?.style.setProperty('display', 'none');

      // Create and show success message
      const successHtml = `
        <div class="newsletter-popup__success" style="margin-top: 0;">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>${this.dataset.successMessage || "You're in! Check your email for your exclusive offer."}</span>
        </div>
      `;

      const form = this.querySelector('.newsletter-popup__form');
      if (form) {
        form.insertAdjacentHTML('beforeend', successHtml);
      }

      // Redirect or close after delay
      if (this.successRedirectUrl) {
        setTimeout(() => {
          window.location.href = this.successRedirectUrl;
        }, 2000);
      } else {
        setTimeout(() => this.closeDialog(), 3000);
      }
    }

    pushDataLayer(event, extraData = {}) {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: event,
        popup_type: 'newsletter',
        ...extraData
      });
    }

    showDialog(trigger = 'unknown', force = false) {
      if (!this.dialog) return;
      if (this.hasOpened && !force) return;

      // Don't reopen if already open
      if (this.dialog.open) return;

      this.hasOpened = true;
      this.dialog.showModal();
      document.documentElement.setAttribute('scroll-lock', '');
      this.pushDataLayer('newsletter_popup_opened', { trigger });

      // Hide teaser when popup is open
      this.teaserWrapper?.classList.remove('newsletter-popup__teaser-wrapper--visible');
    }

    closeDialog() {
      if (!this.dialog) return;
      this.dialog.classList.add('dialog-closing');
      localStorage.setItem(this.storageKey, 'dismissed');

      this.dialog.addEventListener('animationend', () => {
        this.dialog.classList.remove('dialog-closing');
        this.dialog.close();
        document.documentElement.removeAttribute('scroll-lock');
        // Show teaser again after close (only if not dismissed)
        const teaserDismissed = localStorage.getItem(this.teaserDismissedKey);
        if (this.dataset.showTeaser === 'true' && this.dataset.enabled === 'true' && !teaserDismissed) {
          this.teaserWrapper?.classList.add('newsletter-popup__teaser-wrapper--visible');
        }
      }, { once: true });
    }
  }

  if (!customElements.get('newsletter-popup-component')) {
    customElements.define('newsletter-popup-component', NewsletterPopupComponent);
  }
</script>

