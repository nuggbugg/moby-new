    },
    {
      "type": "text",
      "id": "privacy_text",
      "label": "Privacy text",
      "default": "No spam, ever. Unsubscribe anytime."
    }
  ],
  "presets": [
    {
      "name": "MOBY Newsletter Popup"
    }
  ]
}
