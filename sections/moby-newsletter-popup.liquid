{% comment %}
  MOBY Newsletter Popup
  - Beautiful on-brand popup that appears after delay
  - Uses localStorage to remember if user dismissed/submitted
  - Syncs with Shopify customer list
{% endcomment %}

<script src="{{ 'dialog.js' | asset_url }}" type="module"></script>

<newsletter-popup-component
  class="newsletter-popup"
  data-delay="{{ section.settings.popup_delay | times: 1000 | default: 5000 }}"
  data-show-once="{{ section.settings.show_once }}"
  data-enabled="{{ section.settings.enabled }}"
>
  <dialog
    ref="dialog"
    class="newsletter-popup__dialog"
    aria-labelledby="newsletter-popup-heading"
  >
    <div class="newsletter-popup__container">
      <!-- Close Button -->
      <button
        ref="closeButton"
        class="newsletter-popup__close"
        aria-label="{{ 'accessibility.close_dialog' | t }}"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>

      <!-- Visual Side -->
      <div class="newsletter-popup__visual">
        {% if section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url: width: 600 }}"
            alt="{{ section.settings.image.alt | default: 'Newsletter signup' }}"
            class="newsletter-popup__image"
            loading="lazy"
          >
        {% else %}
          <!-- Default decorative pattern -->
          <div class="newsletter-popup__pattern">
            <svg viewBox="0 0 200 200" class="newsletter-popup__pattern-svg">
              <defs>
                <pattern id="popup-dots" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                  <circle cx="2" cy="2" r="1.5" fill="currentColor" opacity="0.3"/>
                </pattern>
              </defs>
              <rect width="200" height="200" fill="url(#popup-dots)"/>
              <circle cx="100" cy="100" r="60" fill="none" stroke="currentColor" stroke-width="0.5" opacity="0.2"/>
              <circle cx="100" cy="100" r="40" fill="none" stroke="currentColor" stroke-width="0.5" opacity="0.3"/>
            </svg>
            <div class="newsletter-popup__pattern-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
              </svg>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Content Side -->
      <div class="newsletter-popup__content">
        <!-- Badge -->
        {% if section.settings.badge != blank %}
          <span class="newsletter-popup__badge">{{ section.settings.badge }}</span>
        {% endif %}

        <!-- Heading -->
        <h2 id="newsletter-popup-heading" class="newsletter-popup__heading">
          {{ section.settings.heading | default: 'Join the MOBY Family' }}
        </h2>

        <!-- Description -->
        <p class="newsletter-popup__description">
          {{ section.settings.description | default: 'Get 10% off your first order plus exclusive access to new products, wellness tips, and members-only offers.' }}
        </p>

        <!-- Form -->
        {%- form 'customer', class: 'newsletter-popup__form', id: 'newsletter-popup-form' -%}
          <input type="hidden" name="contact[tags]" value="waitlist,newsletter,popup">

          <div class="newsletter-popup__form-group">
            <input
              type="email"
              name="contact[email]"
              id="newsletter-popup-email"
              class="newsletter-popup__input"
              placeholder="{{ section.settings.placeholder | default: 'Enter your email' }}"
              required
              autocomplete="email"
              aria-label="Email address"
            >
          </div>

          <button type="submit" class="newsletter-popup__submit">
            {{ section.settings.button_text | default: 'Get My 10% Off' }}
          </button>

          {%- if form.posted_successfully? -%}
            <div class="newsletter-popup__success" data-success="true">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>{{ section.settings.success_message | default: "You're in! Check your email for your discount code." }}</span>
            </div>
          {%- endif -%}

          {%- if form.errors -%}
            <p class="newsletter-popup__error">
              {{ form.errors.messages['email'] | default: 'Please enter a valid email address.' }}
            </p>
          {%- endif -%}
        {%- endform -%}

        <!-- Privacy Note -->
        <p class="newsletter-popup__privacy">
          {{ section.settings.privacy_text | default: 'No spam, ever. Unsubscribe anytime.' }}
        </p>
      </div>
    </div>
  </dialog>
</newsletter-popup-component>

<script>
  class NewsletterPopupComponent extends HTMLElement {
    constructor() {
      super();
      this.dialog = this.querySelector('[ref="dialog"]');
      this.closeButton = this.querySelector('[ref="closeButton"]');
      this.form = this.querySelector('form');
      this.storageKey = 'moby-newsletter-popup-dismissed';
    }

    connectedCallback() {
      const enabled = this.dataset.enabled === 'true';
      const showOnce = this.dataset.showOnce === 'true';
      const delay = parseInt(this.dataset.delay, 10) || 3000;

      // Allow forcing popup via URL parameter (for testing)
      const urlParams = new URLSearchParams(window.location.search);
      const forceShow = urlParams.get('show_newsletter') === 'true';

      // Clear localStorage if force reset is requested
      if (urlParams.get('reset_newsletter') === 'true') {
        localStorage.removeItem(this.storageKey);
        console.log('Newsletter popup: localStorage cleared');
      }

      if (!enabled && !forceShow) return;

      // Check if already dismissed/submitted (skip if force showing)
      if (showOnce && localStorage.getItem(this.storageKey) && !forceShow) {
        return;
      }

      // Check if form was just submitted successfully
      const successEl = this.querySelector('[data-success="true"]');
      if (successEl) {
        localStorage.setItem(this.storageKey, 'submitted');
        // Show the success state briefly then close
        this.showDialog();
        setTimeout(() => this.closeDialog(), 3000);
        return;
      }

      // Show popup after delay
      setTimeout(() => {
        this.showDialog();
      }, delay);

      // Event listeners
      this.closeButton?.addEventListener('click', () => this.closeDialog());
      this.dialog?.addEventListener('click', (e) => {
        if (e.target === this.dialog) this.closeDialog();
      });
      this.dialog?.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') this.closeDialog();
      });

      // Mark as dismissed when form submits
      this.form?.addEventListener('submit', () => {
        localStorage.setItem(this.storageKey, 'submitted');
      });
    }

    showDialog() {
      if (!this.dialog) return;
      this.dialog.showModal();
      document.documentElement.setAttribute('scroll-lock', '');
    }

    closeDialog() {
      if (!this.dialog) return;
      this.dialog.classList.add('dialog-closing');
      localStorage.setItem(this.storageKey, 'dismissed');

      this.dialog.addEventListener('animationend', () => {
        this.dialog.classList.remove('dialog-closing');
        this.dialog.close();
        document.documentElement.removeAttribute('scroll-lock');
      }, { once: true });
    }
  }

  if (!customElements.get('newsletter-popup-component')) {
    customElements.define('newsletter-popup-component', NewsletterPopupComponent);
  }
</script>

<style>
  .newsletter-popup__dialog {
    position: fixed;
    border: none;
    border-radius: 6px;
    padding: 0;
    max-width: 800px;
    width: calc(100% - 24px);
    max-height: calc(100vh - 24px);
    background: #fff;
    box-shadow: 0 25px 50px -12px rgba(28, 26, 16, 0.25);
    overflow: hidden;
  }

  .newsletter-popup__dialog::backdrop {
    background: rgba(28, 26, 16, 0.6);
    backdrop-filter: blur(4px);
  }

  .newsletter-popup__dialog[open] {
    animation: popupSlideIn 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .newsletter-popup__dialog.dialog-closing {
    animation: popupSlideOut 0.3s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes popupSlideIn {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes popupSlideOut {
    from {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    to {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
  }

  .newsletter-popup__container {
    display: grid;
    grid-template-columns: 1fr;
    min-height: auto;
  }

  @media (min-width: 768px) {
    .newsletter-popup__container {
      grid-template-columns: 1fr 1fr;
      min-height: 480px;
    }
  }

  .newsletter-popup__close {
    position: absolute;
    top: 12px;
    right: 12px;
    z-index: 10;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    color: var(--moby-dark, #1B1A0F);
    transition: background 0.2s ease, transform 0.2s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .newsletter-popup__close:hover {
    background: #fff;
    transform: scale(1.05);
  }

  /* Visual Side */
  .newsletter-popup__visual {
    display: none;
    background: var(--moby-lime, #F9FDB5);
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .newsletter-popup__visual {
      display: block;
    }
  }

  .newsletter-popup__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .newsletter-popup__pattern {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background: linear-gradient(180deg, #87CEEB 0%, #FFE4B5 50%, #FFA07A 100%);
  }

  .newsletter-popup__pattern-svg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    color: var(--moby-olive, #4F4A32);
    opacity: 0.15;
  }

  .newsletter-popup__pattern-icon {
    position: relative;
    z-index: 1;
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    color: var(--moby-olive, #4F4A32);
  }

  /* Content Side */
  .newsletter-popup__content {
    padding: 40px 24px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  @media (min-width: 768px) {
    .newsletter-popup__content {
      padding: 48px 40px;
    }
  }

  .newsletter-popup__badge {
    display: inline-block;
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--moby-dark, #1B1A0F);
    background: var(--moby-lime, #F9FDB5);
    padding: 8px 16px;
    border-radius: 100px;
    margin-bottom: 20px;
  }

  .newsletter-popup__heading {
    font-family: 'Memoir', serif;
    font-size: clamp(24px, 5vw, 32px);
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--moby-dark, #1B1A0F);
    margin: 0 0 12px;
    line-height: 1.1;
  }

  .newsletter-popup__description {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 300;
    line-height: 1.6;
    color: var(--moby-dark, #1B1A0F);
    margin: 0 0 24px;
    max-width: 320px;
  }

  .newsletter-popup__form {
    width: 100%;
    max-width: 320px;
    margin-bottom: 20px;
  }

  .newsletter-popup__form-group {
    margin-bottom: 12px;
  }

  .newsletter-popup__input {
    width: 100%;
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 300;
    color: var(--moby-dark, #1B1A0F);
    background: #fff;
    border: 1px solid var(--moby-sage, #C9C8B6);
    border-radius: 6px;
    padding: 16px 20px;
    outline: none;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    text-align: center;
  }

  .newsletter-popup__input::placeholder {
    color: var(--moby-olive, #4F4A32);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    font-size: 13px;
  }

  .newsletter-popup__input:focus {
    border-color: var(--moby-olive, #4F4A32);
    box-shadow: 0 0 0 3px rgba(79, 74, 50, 0.1);
  }

  .newsletter-popup__submit {
    width: 100%;
    font-family: 'N27', sans-serif;
    font-size: 13px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #fff;
    background: var(--moby-olive, #4F4A32);
    border: none;
    border-radius: 6px;
    padding: 16px 24px;
    cursor: pointer;
    transition: background 0.2s ease, transform 0.15s ease;
  }

  .newsletter-popup__submit:hover {
    background: var(--moby-dark, #1B1A0F);
  }

  .newsletter-popup__submit:active {
    transform: scale(0.98);
  }

  .newsletter-popup__success {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: var(--moby-olive, #4F4A32);
    margin-top: 12px;
    padding: 16px;
    background: var(--moby-lime, #F9FDB5);
    border-radius: 6px;
  }

  .newsletter-popup__error {
    font-family: 'N27', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: #dc2626;
    margin-top: 8px;
  }

  .newsletter-popup__privacy {
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--moby-olive, #4F4A32);
    margin: 0;
    text-align: center;
  }
</style>

