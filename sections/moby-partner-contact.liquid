{% comment %}
  MOBY Partner Contact Info Section
  - Simple contact info for other inquiries
{% endcomment %}

<section class="moby-partner-contact">
  <div class="moby-container">
    <div class="moby-partner-contact__content">
      <h3 class="moby-partner-contact__heading">{{ section.settings.heading }}</h3>
      <p class="moby-partner-contact__text">
        {{ section.settings.text }}
        <a href="mailto:{{ section.settings.email }}" class="moby-partner-contact__email">{{ section.settings.email }}</a>
      </p>
      {%- if section.settings.response_time != blank -%}
        <p class="moby-partner-contact__response">{{ section.settings.response_time }}</p>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .moby-partner-contact {
    padding: 48px 0 64px;
    border-top: 1px solid rgba(201, 200, 182, 0.3);
  }

  @media (min-width: 768px) {
    .moby-partner-contact {
      padding: 64px 0;
    }
  }

  .moby-partner-contact__content {
    text-align: center;
  }

  .moby-partner-contact__heading {
    font-family: 'Memoir', serif;
    font-size: 18px;
    text-transform: uppercase;
    color: var(--moby-dark, #1C1A10);
    margin: 0 0 16px;
  }

  @media (min-width: 768px) {
    .moby-partner-contact__heading {
      font-size: 20px;
    }
  }

  .moby-partner-contact__text {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 300;
    line-height: 1.6;
    color: var(--moby-sage, #C9C8B6);
    margin: 0 0 8px;
  }

  @media (min-width: 768px) {
    .moby-partner-contact__text {
      font-size: 15px;
    }
  }

  .moby-partner-contact__email {
    color: var(--moby-dark, #1C1A10);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .moby-partner-contact__email:hover {
    opacity: 0.7;
    text-decoration: underline;
  }

  .moby-partner-contact__response {
    font-family: 'N27', sans-serif;
    font-size: 12px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--moby-sage, #C9C8B6);
    margin: 0;
  }
</style>

{% schema %}
{
  "name": "MOBY Partner Contact",
  "tag": "section",
  "class": "moby-partner-contact-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Other Inquiries"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "For general questions or support, email us at:"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "hello@drinkmoby.com"
    },
    {
      "type": "text",
      "id": "response_time",
      "label": "Response time text",
      "default": "We respond within 2 business days"
    }
  ],
  "presets": [
    {
      "name": "MOBY Partner Contact"
    }
  ]
}
{% endschema %}
