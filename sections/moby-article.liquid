{% comment %}
  MOBY Article Section - Individual Blog Post
  - Breadcrumbs, back link
  - Title, author, date, reading time with icons
  - Share buttons + Shop CTA
  - Featured image (21:9 aspect)
  - Article content with styled typography
  - Tags
  - CTA section
  - Related articles
{% endcomment %}

{%- comment -%} Article Structured Data for SEO {%- endcomment -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": {{ article.title | json }},
  "description": {{ article.excerpt_or_content | strip_html | truncate: 160 | json }},
  "image": "{{ article.image | image_url: width: 1200 }}",
  "author": {
    "@type": "Person",
    "name": {{ article.author | json }}
  },
  "publisher": {
    "@type": "Organization",
    "name": {{ shop.name | json }},
    "logo": {
      "@type": "ImageObject",
      "url": "{{ shop.url }}{{ 'logo.png' | asset_url }}"
    }
  },
  "datePublished": "{{ article.published_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
  "dateModified": "{{ article.updated_at | default: article.published_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ shop.url }}{{ article.url }}"
  }
}
</script>

{%- comment -%} BreadcrumbList Schema for SEO {%- endcomment -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "{{ shop.url }}"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "The Power Station",
      "item": "{{ shop.url }}{{ blog.url }}"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": {{ article.title | json }},
      "item": "{{ shop.url }}{{ article.url }}"
    }
  ]
}
</script>

<article class="moby-article">
  <div class="moby-container moby-container--narrow">
    <!-- Back Link -->
    <a href="{{ blog.url }}" class="moby-article__back">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="19" y1="12" x2="5" y2="12"></line>
        <polyline points="12 19 5 12 12 5"></polyline>
      </svg>
      Back to The Power Station
    </a>

    <!-- Header -->
    <header class="moby-article__header">
      <!-- Breadcrumbs -->
      <nav class="moby-article__breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li><a href="/">Home</a></li>
          <li><span class="moby-article__breadcrumb-sep">/</span></li>
          <li><a href="{{ blog.url }}">The Power Station</a></li>
          <li><span class="moby-article__breadcrumb-sep">/</span></li>
          <li><span class="moby-article__breadcrumb-current">{{ article.title | truncate: 30 }}</span></li>
        </ol>
      </nav>

      <!-- Category Badge -->
      {%- if article.tags.size > 0 -%}
        {%- assign first_tag = article.tags.first | downcase -%}
        <span class="moby-article__category moby-article__category--{{ first_tag | handle }}">
          {{ article.tags.first }}
        </span>
      {%- endif -%}

      <!-- Title -->
      <h1 class="moby-article__title">
        {{ article.title }}
      </h1>

      <!-- Meta with Icons -->
      <div class="moby-article__meta">
        <span class="moby-article__meta-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          {{ article.author }}
        </span>
        <span class="moby-article__meta-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
            {{ article.published_at | date: "%B %d, %Y" }}
          </time>
        </span>
        <span class="moby-article__meta-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          {%- assign words = article.content | strip_html | number_of_words -%}
          {%- assign minutes = words | divided_by: 200 -%}
          {%- if minutes < 1 %}{% assign minutes = 1 %}{% endif -%}
          {{ minutes }} min read
        </span>
      </div>
    </header>

    <!-- Share Bar -->
    <div class="moby-article__share-bar">
      <div class="moby-article__share-buttons">
        <span class="moby-article__share-label">Share:</span>
        <a
          href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ article.url }}&text={{ article.title | url_encode }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on X"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a
          href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on Facebook"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/shareArticle?mini=true&url={{ shop.url }}{{ article.url }}&title={{ article.title | url_encode }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on LinkedIn"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <button
          class="moby-article__share-btn"
          onclick="navigator.clipboard.writeText('{{ shop.url }}{{ article.url }}'); this.classList.add('copied'); setTimeout(() => this.classList.remove('copied'), 2000);"
          aria-label="Copy link"
        >
          <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
          </svg>
          <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
        </button>
      </div>

      <a href="/products/moby-creatine-sticks" class="moby-article__shop-btn">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
        Shop MOBY
      </a>
    </div>

    <!-- Featured Image -->
    {%- if article.image -%}
      <div class="moby-article__image">
        {{ article.image | image_url: width: 1400 | image_tag:
          class: 'moby-article__image-img',
          loading: 'eager',
          sizes: '(max-width: 900px) 100vw, 900px',
          widths: '400, 600, 800, 1000, 1200, 1400',
          alt: article.title,
          fetchpriority: 'high'
        }}
      </div>
    {%- endif -%}

    <!-- Content -->
    <div class="moby-article__content rte">
      {{ article.content }}
    </div>

    <!-- Tags -->
    {%- if article.tags.size > 0 -%}
      <div class="moby-article__tags">
        {%- for tag in article.tags -%}
          <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="moby-article__tag">
            #{{ tag }}
          </a>
        {%- endfor -%}
      </div>
    {%- endif -%}

    <!-- Share Bar Bottom -->
    <div class="moby-article__share-bar moby-article__share-bar--bottom">
      <div class="moby-article__share-buttons">
        <span class="moby-article__share-label">Share this article:</span>
        <a
          href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ article.url }}&text={{ article.title | url_encode }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on X"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a
          href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on Facebook"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/shareArticle?mini=true&url={{ shop.url }}{{ article.url }}&title={{ article.title | url_encode }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on LinkedIn"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>
    </div>

  <!-- CTA Box - Full Width -->
  </div>
  <div class="moby-article__cta">
    <div class="moby-container">
      <h3 class="moby-article__cta-title">
        {{ section.settings.cta_heading | default: 'Ready to Experience the Difference?' }}
      </h3>
      <p class="moby-article__cta-text">
        {{ section.settings.cta_text | default: "Try MOBY's pharmaceutical-grade creatine monohydrate today." }}
      </p>
      <a href="{{ section.settings.cta_link | default: '/products/moby-creatine-sticks' }}" class="moby-article__cta-btn">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
        {{ section.settings.cta_button | default: 'Shop Now' }}
      </a>
    </div>
  </div>
  <div class="moby-container moby-container--narrow moby-article__continue-wrapper">

  <!-- Related Articles -->
  {%- if blog.articles.size > 1 -%}
    <div class="moby-article__related">
      <div class="moby-container">
        <h2 class="moby-article__related-title">Continue Reading</h2>
        <div class="moby-article__related-grid">
          {%- assign related_count = 0 -%}
          {%- for related in blog.articles limit: 4 -%}
            {%- unless related.id == article.id -%}
              {%- if related_count < 2 -%}
                <a href="{{ related.url }}" class="moby-article__related-card">
                  {%- if related.image -%}
                    <div class="moby-article__related-image">
                      {{ related.image | image_url: width: 500 | image_tag:
                        loading: 'lazy',
                        sizes: '(max-width: 640px) 90vw, 400px',
                        widths: '300, 400, 500',
                        alt: related.title
                      }}
                    </div>
                  {%- endif -%}
                  <div class="moby-article__related-content">
                    <div class="moby-article__related-meta">
                      {%- if related.tags.size > 0 -%}
                        <span class="moby-article__related-category">{{ related.tags.first }}</span>
                      {%- endif -%}
                      <span class="moby-article__related-reading">
                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <circle cx="12" cy="12" r="10"></circle>
                          <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                        {%- assign related_words = related.content | strip_html | number_of_words -%}
                        {%- assign related_minutes = related_words | divided_by: 200 -%}
                        {%- if related_minutes < 1 %}{% assign related_minutes = 1 %}{% endif -%}
                        {{ related_minutes }} min read
                      </span>
                    </div>
                    <h3 class="moby-article__related-card-title">{{ related.title }}</h3>
                    <p class="moby-article__related-excerpt">{{ related.excerpt_or_content | strip_html | truncate: 100 }}</p>
                    <span class="moby-article__related-date">{{ related.published_at | date: "%B %d, %Y" }}</span>
                  </div>
                </a>
                {%- assign related_count = related_count | plus: 1 -%}
              {%- endif -%}
            {%- endunless -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  {%- endif -%}
</article>

