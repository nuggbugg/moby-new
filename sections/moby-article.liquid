{% comment %}
  MOBY Article Section - Individual Blog Post
  - Back link, title, author, date, reading time
  - Share buttons
  - Article content
  - Tags
  - CTA section
  - Related articles
{% endcomment %}

<article class="moby-article">
  <div class="moby-container moby-container--narrow">
    <!-- Back Link -->
    <a href="{{ blog.url }}" class="moby-article__back">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="19" y1="12" x2="5" y2="12"></line>
        <polyline points="12 19 5 12 12 5"></polyline>
      </svg>
      Back to The Power Station
    </a>

    <!-- Header -->
    <header class="moby-article__header">
      <!-- Category Badge -->
      {%- if article.tags.size > 0 -%}
        <span class="moby-article__category moby-article__category--{{ article.tags.first | handle }}">
          {{ article.tags.first }}
        </span>
      {%- endif -%}

      <!-- Title -->
      <h1 class="moby-article__title">
        {{ article.title }}
      </h1>

      <!-- Meta -->
      <div class="moby-article__meta">
        <span class="moby-article__author">
          By {{ article.author }}
        </span>
        <span class="moby-article__divider">|</span>
        <time class="moby-article__date" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
          {{ article.published_at | date: "%B %d, %Y" }}
        </time>
        <span class="moby-article__divider">|</span>
        <span class="moby-article__reading-time">
          {%- assign words = article.content | strip_html | number_of_words -%}
          {%- assign minutes = words | divided_by: 200 -%}
          {%- if minutes < 1 %}{% assign minutes = 1 %}{% endif -%}
          {{ minutes }} min read
        </span>
      </div>
    </header>

    <!-- Share Bar -->
    <div class="moby-article__share-bar">
      <div class="moby-article__share-buttons">
        <span class="moby-article__share-label">Share:</span>
        <a
          href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ article.url }}&text={{ article.title | url_encode }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on Twitter"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a
          href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on Facebook"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/shareArticle?mini=true&url={{ shop.url }}{{ article.url }}&title={{ article.title | url_encode }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on LinkedIn"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <button
          class="moby-article__share-btn"
          onclick="navigator.clipboard.writeText('{{ shop.url }}{{ article.url }}'); this.querySelector('svg').style.display='none'; this.querySelector('span').style.display='inline'; setTimeout(() => { this.querySelector('svg').style.display='block'; this.querySelector('span').style.display='none'; }, 2000);"
          aria-label="Copy link"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
          </svg>
          <span style="display: none; font-size: 11px; text-transform: uppercase; letter-spacing: 0.04em;">Copied!</span>
        </button>
      </div>

      <a href="{{ routes.all_products_collection_url }}" class="moby-article__shop-btn">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
        Shop MOBY
      </a>
    </div>

    <!-- Featured Image -->
    {%- if article.image -%}
      <div class="moby-article__image">
        {{ article.image | image_url: width: 1200 | image_tag:
          class: 'moby-article__image-img',
          loading: 'eager',
          sizes: '(max-width: 1000px) 90vw, 900px',
          widths: '400, 600, 800, 1000, 1200'
        }}
      </div>
    {%- endif -%}

    <!-- Content -->
    <div class="moby-article__content rte">
      {{ article.content }}
    </div>

    <!-- Tags -->
    {%- if article.tags.size > 0 -%}
      <div class="moby-article__tags">
        {%- for tag in article.tags -%}
          <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="moby-article__tag">
            #{{ tag }}
          </a>
        {%- endfor -%}
      </div>
    {%- endif -%}

    <!-- Share Bar Bottom -->
    <div class="moby-article__share-bar moby-article__share-bar--bottom">
      <div class="moby-article__share-buttons">
        <span class="moby-article__share-label">Share this article:</span>
        <a
          href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ article.url }}&text={{ article.title | url_encode }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on Twitter"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a
          href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on Facebook"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/shareArticle?mini=true&url={{ shop.url }}{{ article.url }}&title={{ article.title | url_encode }}"
          target="_blank"
          rel="noopener noreferrer"
          class="moby-article__share-btn"
          aria-label="Share on LinkedIn"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- CTA Box -->
    <div class="moby-article__cta">
      <h3 class="moby-article__cta-title">
        {{ section.settings.cta_heading | default: 'Ready to Experience the Difference?' }}
      </h3>
      <p class="moby-article__cta-text">
        {{ section.settings.cta_text | default: "Try MOBY's pharmaceutical-grade creatine monohydrate today." }}
      </p>
      <a href="{{ section.settings.cta_link | default: routes.all_products_collection_url }}" class="moby-article__cta-btn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
        {{ section.settings.cta_button | default: 'Shop Now' }}
      </a>
    </div>
  </div>

  <!-- Related Articles -->
  {%- if blog.articles.size > 1 -%}
    <div class="moby-article__related">
      <div class="moby-container">
        <h2 class="moby-article__related-title">Related Articles</h2>
        <div class="moby-article__related-grid">
          {%- for related in blog.articles limit: 3 -%}
            {%- unless related.id == article.id -%}
              <a href="{{ related.url }}" class="moby-article__related-card">
                {%- if related.image -%}
                  <div class="moby-article__related-image">
                    {{ related.image | image_url: width: 400 | image_tag:
                      loading: 'lazy',
                      sizes: '(max-width: 640px) 90vw, 300px',
                      widths: '200, 300, 400'
                    }}
                  </div>
                {%- endif -%}
                <div class="moby-article__related-content">
                  <h3 class="moby-article__related-card-title">{{ related.title }}</h3>
                  <span class="moby-article__related-date">{{ related.published_at | date: "%B %d, %Y" }}</span>
                </div>
              </a>
            {%- endunless -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  {%- endif -%}
</article>

<style>
  .moby-article {
    padding-top: 80px;
  }

  @media (min-width: 768px) {
    .moby-article {
      padding-top: 96px;
    }
  }

  /* Back Link */
  .moby-article__back {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--moby-sage, #C9C8B6);
    text-decoration: none;
    margin-bottom: 24px;
    transition: color 0.2s ease;
  }

  .moby-article__back:hover {
    color: var(--moby-dark, #1C1A10);
  }

  /* Header */
  .moby-article__header {
    text-align: center;
    margin-bottom: 32px;
  }

  .moby-article__category {
    display: inline-block;
    font-family: 'N27', sans-serif;
    font-size: 10px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    padding: 4px 12px;
    border-radius: 4px;
    background: rgba(79, 74, 50, 0.1);
    color: var(--moby-olive, #4F4A32);
    margin-bottom: 16px;
  }

  .moby-article__category--science {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  .moby-article__category--lifestyle {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
  }

  .moby-article__category--guides {
    background: rgba(168, 85, 247, 0.1);
    color: #a855f7;
  }

  .moby-article__category--news {
    background: rgba(249, 115, 22, 0.1);
    color: #f97316;
  }

  .moby-article__title {
    font-family: 'Memoir', serif;
    font-size: clamp(32px, 6vw, 48px);
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    line-height: 1.1;
    color: var(--moby-dark, #1C1A10);
    margin: 0 0 16px;
  }

  .moby-article__meta {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 8px;
    font-family: 'N27', sans-serif;
    font-size: 12px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--moby-sage, #C9C8B6);
  }

  .moby-article__divider {
    opacity: 0.5;
  }

  /* Share Bar */
  .moby-article__share-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    padding: 16px 0;
    border-top: 1px solid rgba(201, 200, 182, 0.3);
    border-bottom: 1px solid rgba(201, 200, 182, 0.3);
    margin-bottom: 32px;
    flex-wrap: wrap;
  }

  .moby-article__share-bar--bottom {
    margin-top: 32px;
    margin-bottom: 0;
    border-bottom: none;
  }

  .moby-article__share-buttons {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .moby-article__share-label {
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--moby-sage, #C9C8B6);
  }

  .moby-article__share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border: 1px solid rgba(201, 200, 182, 0.3);
    border-radius: 4px;
    color: var(--moby-dark, #1C1A10);
    background: transparent;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .moby-article__share-btn:hover {
    border-color: var(--moby-olive, #4F4A32);
    color: var(--moby-olive, #4F4A32);
  }

  .moby-article__shop-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--moby-dark, #1C1A10);
    text-decoration: none;
    padding: 10px 16px;
    border: 1px solid rgba(201, 200, 182, 0.5);
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .moby-article__shop-btn:hover {
    border-color: var(--moby-olive, #4F4A32);
    background: var(--moby-olive, #4F4A32);
    color: #ffffff;
  }

  /* Featured Image */
  .moby-article__image {
    margin-bottom: 32px;
    border-radius: 8px;
    overflow: hidden;
  }

  .moby-article__image-img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Content */
  .moby-article__content {
    font-family: 'N27', sans-serif;
    font-size: 16px;
    font-weight: 300;
    line-height: 1.8;
    color: var(--moby-dark, #1C1A10);
  }

  .moby-article__content h2 {
    font-family: 'Memoir', serif;
    font-size: clamp(24px, 4vw, 32px);
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin: 48px 0 16px;
  }

  .moby-article__content h3 {
    font-family: 'Memoir', serif;
    font-size: clamp(20px, 3vw, 26px);
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin: 40px 0 12px;
  }

  .moby-article__content h4 {
    font-family: 'Memoir', serif;
    font-size: 18px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin: 32px 0 8px;
  }

  .moby-article__content p {
    margin: 0 0 20px;
  }

  .moby-article__content ul,
  .moby-article__content ol {
    padding-left: 24px;
    margin: 0 0 24px;
  }

  .moby-article__content li {
    margin-bottom: 8px;
  }

  .moby-article__content strong {
    font-weight: 500;
  }

  .moby-article__content hr {
    border: none;
    border-top: 1px solid rgba(201, 200, 182, 0.3);
    margin: 40px 0;
  }

  /* Tags */
  .moby-article__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 40px;
    padding-top: 24px;
    border-top: 1px solid rgba(201, 200, 182, 0.3);
  }

  .moby-article__tag {
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--moby-sage, #C9C8B6);
    background: rgba(201, 200, 182, 0.15);
    padding: 6px 12px;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .moby-article__tag:hover {
    background: rgba(201, 200, 182, 0.3);
    color: var(--moby-dark, #1C1A10);
  }

  /* CTA Box */
  .moby-article__cta {
    text-align: center;
    background: rgba(201, 200, 182, 0.15);
    border-radius: 8px;
    padding: 40px 24px;
    margin-top: 48px;
  }

  .moby-article__cta-title {
    font-family: 'Memoir', serif;
    font-size: clamp(22px, 4vw, 28px);
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--moby-dark, #1C1A10);
    margin: 0 0 12px;
  }

  .moby-article__cta-text {
    font-family: 'N27', sans-serif;
    font-size: 13px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--moby-sage, #C9C8B6);
    margin: 0 0 24px;
  }

  .moby-article__cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: 'N27', sans-serif;
    font-size: 13px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #ffffff;
    background: var(--moby-olive, #4F4A32);
    padding: 14px 28px;
    border-radius: 4px;
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .moby-article__cta-btn:hover {
    background: var(--moby-dark, #1C1A10);
  }

  /* Related Articles */
  .moby-article__related {
    margin-top: 64px;
    padding: 64px 0;
    background: rgba(201, 200, 182, 0.1);
  }

  .moby-article__related-title {
    font-family: 'Memoir', serif;
    font-size: 24px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--moby-dark, #1C1A10);
    text-align: center;
    margin: 0 0 32px;
  }

  .moby-article__related-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 640px) {
    .moby-article__related-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .moby-article__related-card {
    display: block;
    background: #ffffff;
    border-radius: 8px;
    overflow: hidden;
    text-decoration: none;
    transition: box-shadow 0.2s ease;
  }

  .moby-article__related-card:hover {
    box-shadow: 0 8px 32px rgba(28, 26, 16, 0.08);
  }

  .moby-article__related-image {
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .moby-article__related-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .moby-article__related-card:hover .moby-article__related-image img {
    transform: scale(1.05);
  }

  .moby-article__related-content {
    padding: 20px;
  }

  .moby-article__related-card-title {
    font-family: 'Memoir', serif;
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--moby-dark, #1C1A10);
    margin: 0 0 8px;
    transition: color 0.2s ease;
  }

  .moby-article__related-card:hover .moby-article__related-card-title {
    color: var(--moby-olive, #4F4A32);
  }

  .moby-article__related-date {
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--moby-sage, #C9C8B6);
  }
</style>

{% schema %}
{
