    color: var(--moby-olive, #4F4A32);
  }

  /* Prevent body scroll when drawer is open */
  body.cart-drawer-open {
    overflow: hidden;
  }

  /* Opening animation keyframes */
  @keyframes cartDrawerSlideIn {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(0);
    }
  }

  @keyframes cartDrawerFadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>

<script>
  (function() {
    const drawer = document.getElementById('moby-cart-drawer');
    if (!drawer) return;

    // Refresh cart drawer content via Section Rendering API
    async function refreshCartDrawer() {
      try {
        const response = await fetch('/?section_id=moby-cart-drawer');
        if (response.ok) {
          const html = await response.text();
          const parser = new DOMParser();
          const doc = parser.parseFromString(html, 'text/html');
          const newDrawer = doc.getElementById('moby-cart-drawer');
          if (newDrawer) {
            // Replace inner content but keep wrapper
            drawer.innerHTML = newDrawer.innerHTML;
            // Re-initialize event listeners
            initCartDrawerEvents();
          }
        }
        // Update cart count in header
        updateHeaderCartCount();
      } catch (error) {
        console.error('Error refreshing cart drawer:', error);
      }
    }

    // Update cart count badge in header
    async function updateHeaderCartCount() {
      try {
        const response = await fetch('/cart.js');
        if (response.ok) {
          const cart = await response.json();
          const countBadges = document.querySelectorAll('[data-cart-count]');
          countBadges.forEach(badge => {
            badge.textContent = cart.item_count;
            badge.style.display = cart.item_count > 0 ? 'flex' : 'none';
          });
        }
      } catch (error) {
        console.error('Error updating cart count:', error);
      }
    }

    // Open drawer function
    async function openCartDrawer() {
      // Refresh content before opening
      await refreshCartDrawer();
      drawer.classList.add('is-open');
      drawer.setAttribute('aria-hidden', 'false');
      document.body.classList.add('cart-drawer-open');
    }

    // Close drawer function
    function closeCartDrawer() {
      drawer.classList.remove('is-open');
      drawer.setAttribute('aria-hidden', 'true');
      document.body.classList.remove('cart-drawer-open');
    }

    // Expose globally
    window.openCartDrawer = openCartDrawer;
    window.closeCartDrawer = closeCartDrawer;
    window.refreshCartDrawer = refreshCartDrawer;
    window.updateHeaderCartCount = updateHeaderCartCount;

    // Update cart quantity function
    async function updateCartQuantity(line, quantity) {
      try {
        const response = await fetch('/cart/change.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            line: parseInt(line),
            quantity: quantity
          })
        });

        if (response.ok) {
          // Refresh drawer content without page reload
          await refreshCartDrawer();
        }
      } catch (error) {
        console.error('Error updating cart:', error);
      }
    }

    // Initialize all event listeners (called on load and after refresh)
    function initCartDrawerEvents() {
      // Close button handlers
      drawer.querySelectorAll('[data-cart-drawer-close]').forEach(btn => {
        btn.addEventListener('click', closeCartDrawer);
      });

      // Quantity update handlers
      drawer.querySelectorAll('[data-quantity-minus]').forEach(btn => {
        btn.addEventListener('click', async function() {
          const line = this.dataset.line;
          const item = this.closest('[data-cart-item]');
          const qtyValue = item.querySelector('[data-quantity-value]');
          const currentQty = parseInt(qtyValue.textContent);

          if (currentQty > 1) {
            await updateCartQuantity(line, currentQty - 1);
          } else {
            await updateCartQuantity(line, 0);
          }
        });
      });

      drawer.querySelectorAll('[data-quantity-plus]').forEach(btn => {
        btn.addEventListener('click', async function() {
          const line = this.dataset.line;
          const item = this.closest('[data-cart-item]');
          const qtyValue = item.querySelector('[data-quantity-value]');
          const currentQty = parseInt(qtyValue.textContent);

          await updateCartQuantity(line, currentQty + 1);
        });
      });

      // Remove item handlers
      drawer.querySelectorAll('[data-remove-item]').forEach(btn => {
        btn.addEventListener('click', async function() {
          const line = this.dataset.line;
          await updateCartQuantity(line, 0);
        });
      });
    }

    // Close on escape key (only add once)
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && drawer.classList.contains('is-open')) {
        closeCartDrawer();
      }
    });

    // Initialize on page load
    initCartDrawerEvents();

    // Initial cart count update
    updateHeaderCartCount();
  })();
</script>
