    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    pointer-events: none;
    visibility: hidden;
  }

  .moby-cart-drawer.is-open {
    pointer-events: auto;
    visibility: visible;
  }

  /* Backdrop with smoother animation */
  .moby-cart-drawer__backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(28, 26, 16, 0.6);
    opacity: 0;
    transition: opacity 0.4s cubic-bezier(0.32, 0.72, 0, 1);
  }

  .moby-cart-drawer.is-open .moby-cart-drawer__backdrop {
    opacity: 1;
  }

