  .moby-cart-drawer__trust-badge {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: 'N27', sans-serif;
    font-size: 11px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: rgba(28, 26, 16, 0.6);
  }

  .moby-cart-drawer__trust-badge svg {
    color: var(--moby-olive, #4F4A32);
  }

  /* Prevent body scroll when drawer is open */
  body.cart-drawer-open {
    overflow: hidden;
  }
</style>

<script>
  (function() {
    const drawer = document.getElementById('moby-cart-drawer');
    if (!drawer) return;

    // Get thresholds from section wrapper
    const sectionWrapper = document.getElementById('cart-drawer-section');
    let shippingThresholds = { SEK: 500, EUR: 43, USD: 50, GBP: 40, NOK: 500, DKK: 350 };
    let currentCurrency = '{{ cart.currency.iso_code | default: "SEK" }}';
    let moneyFormat = '{{ shop.money_format | strip_html | escape }}';

    if (sectionWrapper) {
      try {
        const thresholdsData = sectionWrapper.dataset.shippingThresholds;
        if (thresholdsData) {
          shippingThresholds = JSON.parse(thresholdsData);
        }
        if (sectionWrapper.dataset.currency) {
          currentCurrency = sectionWrapper.dataset.currency;
        }
      } catch (e) {
        console.error('Error parsing shipping thresholds:', e);
      }
    }

    // Format money based on currency
    function formatMoney(cents) {
      const amount = cents / 100;

      // Currency-specific formatting
      const formatters = {
        'SEK': (a) => Math.round(a) + ' kr',
        'NOK': (a) => Math.round(a) + ' kr',
        'DKK': (a) => Math.round(a) + ' kr',
        'EUR': (a) => '€' + a.toFixed(2),
        'USD': (a) => '$' + a.toFixed(2),
        'GBP': (a) => '£' + a.toFixed(2)
      };

      if (formatters[currentCurrency]) {
        return formatters[currentCurrency](amount);
      }

      // Fallback
      return amount.toFixed(2) + ' ' + currentCurrency;
    }

    // Update shipping bar display
    function updateShippingBar(cartTotal, itemCount) {
      const shippingBar = drawer.querySelector('[data-shipping-bar]');
      const shippingFill = drawer.querySelector('[data-shipping-fill]');
      const shippingText = drawer.querySelector('[data-shipping-text]');

      if (!shippingBar || !shippingFill || !shippingText) return;

      // Show/hide based on item count
      shippingBar.style.display = itemCount > 0 ? 'flex' : 'none';

      if (itemCount === 0) return;

      // Get threshold for current currency (in base currency units, not cents)
      const threshold = shippingThresholds[currentCurrency] || 500;
      const thresholdCents = threshold * 100;

      // Calculate progress
      const progress = Math.min((cartTotal / thresholdCents) * 100, 100);
      const remaining = thresholdCents - cartTotal;

      // Update fill bar
      shippingFill.style.width = progress + '%';

      // Update text
      if (remaining > 0) {
        shippingText.innerHTML = 'Add <strong>' + formatMoney(remaining) + '</strong> more for free shipping';
        shippingText.classList.remove('moby-cart-drawer__shipping-text--success');
      } else {
        shippingText.innerHTML = '<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg> You qualify for free shipping!';
        shippingText.classList.add('moby-cart-drawer__shipping-text--success');
      }
    }

    // Refresh cart drawer content via Section Rendering API
    async function refreshCartDrawer() {
      try {
        const response = await fetch('/?section_id=moby-cart-drawer');
        if (response.ok) {
          const html = await response.text();
          const parser = new DOMParser();
          const doc = parser.parseFromString(html, 'text/html');
          const newSection = doc.getElementById('cart-drawer-section');

          if (newSection && sectionWrapper) {
            // Update thresholds and currency from new data
            if (newSection.dataset.shippingThresholds) {
              try {
                shippingThresholds = JSON.parse(newSection.dataset.shippingThresholds);
              } catch (e) {}
            }
            if (newSection.dataset.currency) {
              currentCurrency = newSection.dataset.currency;
            }
          }

          const newDrawer = doc.getElementById('moby-cart-drawer');
          if (newDrawer) {
            drawer.innerHTML = newDrawer.innerHTML;
            // Event delegation means we don't need to re-attach handlers
          }
        }

        // Get fresh cart data and update shipping bar
        const cartResponse = await fetch('/cart.js');
        if (cartResponse.ok) {
          const cart = await cartResponse.json();
          currentCurrency = cart.currency;
          updateShippingBar(cart.total_price, cart.item_count);
          updateHeaderCartCount(cart.item_count);
        }
      } catch (error) {
        console.error('Error refreshing cart drawer:', error);
      }
    }

    // Update cart count badge in header
    function updateHeaderCartCount(count) {
      const countBadges = document.querySelectorAll('[data-cart-count]');
      countBadges.forEach(badge => {
        badge.textContent = count;
        badge.style.display = count > 0 ? 'flex' : 'none';
      });

      // Also update the count text in drawer
      const countText = drawer.querySelector('[data-cart-count-text]');
      if (countText) {
        const itemWord = count === 1 ? 'item' : 'items';
        countText.textContent = count + ' ' + itemWord + ' in your cart';
      }
    }

    // Open drawer function
    async function openCartDrawer() {
      // Refresh content before opening
      await refreshCartDrawer();
      drawer.classList.add('is-open');
      drawer.setAttribute('aria-hidden', 'false');
      document.body.classList.add('cart-drawer-open');
    }

    // Close drawer function
    function closeCartDrawer() {
      drawer.classList.remove('is-open');
      drawer.setAttribute('aria-hidden', 'true');
      document.body.classList.remove('cart-drawer-open');
    }

    // Expose globally
    window.openCartDrawer = openCartDrawer;
    window.closeCartDrawer = closeCartDrawer;
    window.refreshCartDrawer = refreshCartDrawer;
    window.updateHeaderCartCount = updateHeaderCartCount;

    // Update cart quantity function
    async function updateCartQuantity(line, quantity) {
      try {
        const response = await fetch('/cart/change.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            line: parseInt(line),
            quantity: quantity
          })
        });

        if (response.ok) {
          await refreshCartDrawer();
        }
      } catch (error) {
        console.error('Error updating cart:', error);
      }
    }

    // Initialize event listeners using event delegation (works after innerHTML changes)
    let isProcessing = false;

    function initCartDrawerEvents() {
      // Use event delegation on drawer - attach once, works for all dynamic content
      drawer.addEventListener('click', async function(e) {
        // Close button
        if (e.target.closest('[data-cart-drawer-close]')) {
          closeCartDrawer();
          return;
        }

        // Prevent double-clicks while processing
        if (isProcessing) return;

        // Quantity minus
        const minusBtn = e.target.closest('[data-quantity-minus]');
        if (minusBtn) {
          e.preventDefault();
          const line = minusBtn.dataset.line;
          const item = minusBtn.closest('[data-cart-item]');
          if (!item) return;
          const qtyValue = item.querySelector('[data-quantity-value]');
          if (!qtyValue) return;
          const currentQty = parseInt(qtyValue.textContent) || 1;

          isProcessing = true;
          try {
            if (currentQty > 1) {
              await updateCartQuantity(line, currentQty - 1);
            } else {
              await updateCartQuantity(line, 0);
            }
          } finally {
            isProcessing = false;
          }
          return;
        }

        // Quantity plus
        const plusBtn = e.target.closest('[data-quantity-plus]');
        if (plusBtn) {
          e.preventDefault();
          const line = plusBtn.dataset.line;
          const item = plusBtn.closest('[data-cart-item]');
          if (!item) return;
          const qtyValue = item.querySelector('[data-quantity-value]');
          if (!qtyValue) return;
          const currentQty = parseInt(qtyValue.textContent) || 1;

          isProcessing = true;
          try {
            await updateCartQuantity(line, currentQty + 1);
          } finally {
            isProcessing = false;
          }
          return;
        }

        // Remove item
        const removeBtn = e.target.closest('[data-remove-item]');
        if (removeBtn) {
          e.preventDefault();
          const line = removeBtn.dataset.line;
          isProcessing = true;
          try {
            await updateCartQuantity(line, 0);
          } finally {
            isProcessing = false;
          }
          return;
        }
      });
    }

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && drawer.classList.contains('is-open')) {
        closeCartDrawer();
      }
    });

    // Initialize on page load
    initCartDrawerEvents();

    // Initial shipping bar update
    (async function() {
      try {
        const response = await fetch('/cart.js');
        if (response.ok) {
          const cart = await response.json();
          currentCurrency = cart.currency;
          updateShippingBar(cart.total_price, cart.item_count);
        }
      } catch (e) {}
    })();
  })();
</script>
