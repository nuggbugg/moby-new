  .moby-cart-drawer__item-badge--onetime {
    background: rgba(201, 200, 182, 0.25);
    color: var(--moby-olive, #4F4A32);
  }

  .moby-cart-drawer__item-badge--subscription {
    background: rgba(249, 253, 181, 0.5);
    color: var(--moby-olive, #4F4A32);
  }

  .moby-cart-drawer__item-price {
    font-family: 'N27', sans-serif;
    font-size: 16px;
    font-weight: 600;
    color: var(--moby-dark, #1C1A10);
    margin: 0;
  }

  /* Empty State */
  .moby-cart-drawer__empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    text-align: center;
    gap: 16px;
    padding: 40px 20px;
  }

  .moby-cart-drawer__empty-icon {
    color: rgba(201, 200, 182, 0.6);
  }

  .moby-cart-drawer__empty p {
    font-family: 'N27', sans-serif;
    font-size: 15px;
    font-weight: 300;
    color: rgba(28, 26, 16, 0.6);
