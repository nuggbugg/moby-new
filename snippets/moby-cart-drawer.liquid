    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    max-width: 440px;
    height: 100%;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform 0.5s cubic-bezier(0.32, 0.72, 0, 1);
    box-shadow: -8px 0 32px rgba(28, 26, 16, 0.15);
  }

  .moby-cart-drawer.is-open .moby-cart-drawer__panel {
    transform: translateX(0);
  }

