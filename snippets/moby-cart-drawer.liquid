  }

  .moby-cart-drawer__item-details {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .moby-cart-drawer__item-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 8px;
  }

  .moby-cart-drawer__item-title {
    font-family: 'N27', sans-serif;
    font-size: 14px;
    font-weight: 500;
    line-height: 1.3;
    color: var(--moby-dark, #1C1A10);
    text-decoration: none;
