{% comment %}
  MOBY Cart Drawer
  - Slide-in drawer from right with smooth animation
  - Free shipping progress bar (dynamic, multi-currency)
  - Cart items with quantity controls and purchase type badges
  - Subtotal and checkout button
{% endcomment %}

<div id="moby-cart-drawer" class="moby-cart-drawer" aria-hidden="true">
  <div class="moby-cart-drawer__backdrop" data-cart-drawer-close></div>

  <div class="moby-cart-drawer__panel">
    <!-- Header -->
    <div class="moby-cart-drawer__header">
      <div class="moby-cart-drawer__header-top">
        <h2 class="moby-cart-drawer__title">Shopping Cart</h2>
        <button type="button" class="moby-cart-drawer__close" data-cart-drawer-close aria-label="Close cart">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>
      <p class="moby-cart-drawer__count" data-cart-count-text>{{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }} in your cart</p>

      <!-- Free Shipping Progress Bar -->
      <div class="moby-cart-drawer__shipping-bar" data-shipping-bar style="{% if cart.item_count == 0 %}display: none;{% endif %}">
        <div class="moby-cart-drawer__shipping-icon">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="1" y="3" width="15" height="13" rx="2"/>
            <path d="M16 8h4l3 3v5a2 2 0 01-2 2h-5"/>
            <circle cx="5.5" cy="18.5" r="2.5"/>
            <circle cx="18.5" cy="18.5" r="2.5"/>
          </svg>
        </div>
        <div class="moby-cart-drawer__shipping-content">
          <div class="moby-cart-drawer__shipping-track">
            <div class="moby-cart-drawer__shipping-fill" data-shipping-fill style="width: 0%;"></div>
          </div>
          <p class="moby-cart-drawer__shipping-text" data-shipping-text></p>
        </div>
      </div>
    </div>

    <!-- Cart Content -->
    <div class="moby-cart-drawer__content" data-cart-drawer-content>
      {% if cart.item_count > 0 %}
        <div class="moby-cart-drawer__items">
          {% for item in cart.items %}
            <div class="moby-cart-drawer__item" data-cart-item data-line-id="{{ item.key }}">
              <div class="moby-cart-drawer__item-image">
                {% if item.image %}
                  <img
                    src="{{ item.image | image_url: width: 180 }}"
                    alt="{{ item.title | escape }}"
                    width="80"
                    height="80"
                    loading="lazy"
                  >
                {% else %}
                  <div class="moby-cart-drawer__item-placeholder"></div>
                {% endif %}
              </div>

              <div class="moby-cart-drawer__item-details">
                <div class="moby-cart-drawer__item-header">
                  <a href="{{ item.url }}" class="moby-cart-drawer__item-title">
                    {{ item.quantity }}x {{ item.product.title }}
                    {% if item.variant.title != 'Default Title' %}
                      ({{ item.variant.title }})
                    {% endif %}
                  </a>
                  <button
                    type="button"
                    class="moby-cart-drawer__remove-btn"
                    data-remove-item
                    data-line="{{ forloop.index }}"
                    aria-label="Remove item"
                  >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <path d="M3 6h18M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6M8 6V4a2 2 0 012-2h4a2 2 0 012 2v2"/>
                    </svg>
                  </button>
                </div>

                <!-- Quantity Controls -->
                <div class="moby-cart-drawer__quantity">
                  <button
                    type="button"
                    class="moby-cart-drawer__qty-btn"
                    data-quantity-minus
                    data-line="{{ forloop.index }}"
                    aria-label="Decrease quantity"
                  >
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                  </button>
                  <span class="moby-cart-drawer__qty-value" data-quantity-value>{{ item.quantity }}</span>
                  <button
                    type="button"
                    class="moby-cart-drawer__qty-btn"
                    data-quantity-plus
                    data-line="{{ forloop.index }}"
                    aria-label="Increase quantity"
                  >
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="12" y1="5" x2="12" y2="19"></line>
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                  </button>
                </div>

                <!-- Purchase Type Badge -->
                {% if item.selling_plan_allocation %}
                  <span class="moby-cart-drawer__item-badge moby-cart-drawer__item-badge--subscription">
                    <svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M23 4v6h-6M1 20v-6h6"/>
                      <path d="M3.51 9a9 9 0 0114.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0020.49 15"/>
                    </svg>
                    Subscribe & Save
                  </span>
                {% else %}
                  <span class="moby-cart-drawer__item-badge moby-cart-drawer__item-badge--onetime">
                    One-time purchase
                  </span>
                {% endif %}

                <p class="moby-cart-drawer__item-price">{{ item.final_line_price | money }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="moby-cart-drawer__empty">
          <div class="moby-cart-drawer__empty-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <rect x="4" y="7" width="16" height="14" rx="2"/>
              <path d="M8 7V6a4 4 0 118 0v1"/>
            </svg>
          </div>
          <p>Your cart is empty</p>
          <a href="/collections/all" class="moby-cart-drawer__continue" data-cart-drawer-close>Continue Shopping</a>
        </div>
      {% endif %}
    </div>

    <!-- Footer -->
    {% if cart.item_count > 0 %}
      <div class="moby-cart-drawer__footer">
        <div class="moby-cart-drawer__subtotal">
          <span>Total</span>
          <span data-cart-subtotal>{{ cart.total_price | money }}</span>
        </div>
        <a href="/checkout" class="moby-cart-drawer__checkout">
          Checkout
        </a>
        <div class="moby-cart-drawer__trust-badges">
          <span class="moby-cart-drawer__trust-badge">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <polyline points="9 12 11 14 15 10"/>
            </svg>
            Secure
          </span>
          <span class="moby-cart-drawer__trust-badge">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="1" y="3" width="15" height="13" rx="2"/>
              <path d="M16 8h4l3 3v5a2 2 0 01-2 2h-5"/>
              <circle cx="5.5" cy="18.5" r="2.5"/>
              <circle cx="18.5" cy="18.5" r="2.5"/>
            </svg>
            Fast Delivery
          </span>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
