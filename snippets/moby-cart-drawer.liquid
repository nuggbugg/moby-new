    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    pointer-events: none;
    visibility: hidden;
  }

  .moby-cart-drawer.is-open {
    pointer-events: auto;
    visibility: visible;
  }

